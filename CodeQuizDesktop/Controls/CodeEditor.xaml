<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
             x:Class="CodeQuizDesktop.Controls.CodeEditor" x:Name="this">

    <Grid RowDefinitions="Auto,5*,3*">
        <!-- Header Bar -->
        <Border StrokeThickness="0" BackgroundColor="{StaticResource SurfaceDark}" Padding="20,12">
            <Grid ColumnDefinitions="*,Auto">
                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                    <Label Text="&lt;/&gt;" TextColor="{StaticResource Primary}" FontSize="18" FontAttributes="Bold" VerticalTextAlignment="Center"/>
                    <Label Text="{Binding FileName, Source={x:Reference this}}" TextColor="{StaticResource TextPrimary}" FontSize="16" FontAttributes="Bold" VerticalTextAlignment="Center"/>
                </HorizontalStackLayout>
                
                <HorizontalStackLayout Grid.Column="1" Spacing="12" VerticalOptions="Center">
                    <!-- Reset Button -->
                    <Border Style="{StaticResource ActionBadge}" StrokeShape="RoundRectangle 12" Padding="16,8">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ResetCommand, Source={x:Reference this}}"/>
                        </Border.GestureRecognizers>
                        <HorizontalStackLayout Spacing="8">
                            <Image Source="refresh.png" WidthRequest="18" HeightRequest="18" VerticalOptions="Center">
                                <Image.Behaviors>
                                    <toolkit:IconTintColorBehavior TintColor="{StaticResource TextPrimary}"/>
                                </Image.Behaviors>
                            </Image>
                            <Label Text="Reset" TextColor="{StaticResource TextPrimary}" FontSize="14" FontAttributes="Bold" VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>

                    <!-- Run Button with Loading Indicator -->
                    <Border Style="{StaticResource ActionBadge}" StrokeShape="RoundRectangle 12" Padding="16,8" IsVisible="{Binding AllowExecution, Source={x:Reference this}}">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding RunCommand, Source={x:Reference this}}"/>
                        </Border.GestureRecognizers>
                        <Grid>
                            <!-- Normal state - Play icon and Run text -->
                            <HorizontalStackLayout Spacing="8" IsVisible="{Binding IsReadyToRun, Source={x:Reference this}}">
                                <Image Source="player_play.png" WidthRequest="18" HeightRequest="18" VerticalOptions="Center">
                                    <Image.Behaviors>
                                        <toolkit:IconTintColorBehavior TintColor="{StaticResource TextPrimary}"/>
                                    </Image.Behaviors>
                                </Image>
                                <Label Text="Run" TextColor="{StaticResource TextPrimary}" FontSize="14" FontAttributes="Bold" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                            
                            <!-- Running state - Activity indicator and Running text -->
                            <HorizontalStackLayout Spacing="8" IsVisible="{Binding IsRunning, Source={x:Reference this}}">
                                <ActivityIndicator IsRunning="{Binding IsRunning, Source={x:Reference this}}" 
                                                   Color="{StaticResource TextPrimary}" 
                                                   WidthRequest="18" 
                                                   HeightRequest="18"
                                                   VerticalOptions="Center"/>
                                <Label Text="Running..." TextColor="{StaticResource TextPrimary}" FontSize="14" FontAttributes="Bold" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </Grid>
                    </Border>
                </HorizontalStackLayout>
            </Grid>
        </Border>
        
        <!-- Code Editor WebView -->
        <WebView x:Name="webview" Grid.Row="1"/>
        
        <!-- Output/Input Panel -->
        <Grid RowDefinitions="Auto,*" IsVisible="{Binding AllowExecution, Source={x:Reference this}}" Grid.Row="2">
            <!-- Panel Headers -->
            <Grid ColumnDefinitions="*,*">
                <Border BackgroundColor="{StaticResource SurfaceDark}" StrokeThickness="0" Padding="20,12">
                    <HorizontalStackLayout Spacing="8">
                        <Label Text="»" TextColor="{StaticResource Success}" FontSize="18" FontAttributes="Bold" VerticalTextAlignment="Center"/>
                        <Label Text="Output" TextColor="{StaticResource TextPrimary}" FontSize="15" FontAttributes="Bold" VerticalTextAlignment="Center"/>
                    </HorizontalStackLayout>
                </Border>
                <BoxView WidthRequest="1" Color="{StaticResource BorderDefault}" HorizontalOptions="End"/>
                <Border Grid.Column="1" BackgroundColor="{StaticResource SurfaceDark}" StrokeThickness="0" Padding="20,12">
                    <HorizontalStackLayout Spacing="8">
                        <Label Text="«" TextColor="{StaticResource Primary}" FontSize="18" FontAttributes="Bold" VerticalTextAlignment="Center"/>
                        <Label Text="Input" TextColor="{StaticResource TextPrimary}" FontSize="15" FontAttributes="Bold" VerticalTextAlignment="Center"/>
                    </HorizontalStackLayout>
                </Border>
            </Grid>

            <!-- Panel Content -->
            <Grid ColumnDefinitions="*,*" Grid.Row="1">
                <Border StrokeThickness="0" BackgroundColor="{StaticResource BackgroundDark}" Padding="20,16">
                    <ScrollView>
                        <Label Text="{Binding Output, Source={x:Reference this}}" 
                               TextColor="{StaticResource TextSecondary}" 
                               FontFamily="SFMonoRegular" 
                               FontSize="14"
                               LineBreakMode="WordWrap"/>
                    </ScrollView>
                </Border>
                <BoxView WidthRequest="1" Color="{StaticResource BorderDefault}" HorizontalOptions="End"/>
                <Border Grid.Column="1" StrokeThickness="0" BackgroundColor="{StaticResource BackgroundDark}" Padding="20,16">
                    <Editor Text="{Binding RawInput, Source={x:Reference this}}" 
                            TextColor="{StaticResource TextPrimary}" 
                            PlaceholderColor="{StaticResource TextMuted}"
                            Placeholder="Enter input here..."
                            FontFamily="SFMonoRegular"
                            FontSize="14"
                            BackgroundColor="Transparent"/>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</ContentView>