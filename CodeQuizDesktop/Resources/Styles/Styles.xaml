<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:converters="clr-namespace:CodeQuizDesktop.Converters">

    <!-- ========== CONVERTERS ========== -->
    <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>

    <!-- ========== TYPOGRAPHY ========== -->
    
    <Style x:Key="PageTitle" TargetType="Label">
        <Setter Property="FontSize" Value="32"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}"/>
    </Style>

    <Style x:Key="SectionHeader" TargetType="Label">
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}"/>
    </Style>

    <Style x:Key="CardTitle" TargetType="Label">
        <Setter Property="FontSize" Value="40"/>
        <Setter Property="FontFamily" Value="InterBlack"/>
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}"/>
    </Style>

    <Style x:Key="ItemTitle" TargetType="Label">
        <Setter Property="FontSize" Value="17"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}"/>
    </Style>

    <Style x:Key="BodyText" TargetType="Label">
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="TextColor" Value="{StaticResource TextSecondary}"/>
    </Style>

    <Style x:Key="CaptionText" TargetType="Label">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="TextColor" Value="{StaticResource TextMuted}"/>
    </Style>

    <Style x:Key="TableHeader" TargetType="Label">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="TextColor" Value="{StaticResource TextMuted}"/>
        <Setter Property="VerticalOptions" Value="Center"/>
    </Style>

    <Style x:Key="CodeLabel" TargetType="Label">
        <Setter Property="FontFamily" Value="SFMonoRegular"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="TextColor" Value="{StaticResource CodeKeyword}"/>
    </Style>

    <Style x:Key="ScoreText" TargetType="Label">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="TextColor" Value="{StaticResource Warning}"/>
    </Style>

    <Style x:Key="SuccessText" TargetType="Label">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="TextColor" Value="{StaticResource Success}"/>
    </Style>

    <!-- ========== BUTTONS ========== -->

    <Style x:Key="PrimaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}"/>
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Padding" Value="18,12"/>
        <Setter Property="MinimumHeightRequest" Value="18"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource PrimaryHover}"/>
                            <Setter Property="Scale" Value="1.02"/>
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource PrimaryPressed}"/>
                            <Setter Property="Scale" Value="0.98"/>
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource Secondary}"/>
                            <Setter Property="TextColor" Value="{StaticResource TextDisabled}"/>
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style x:Key="SecondaryButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="{StaticResource Secondary}"/>
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Padding" Value="18,12"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource SecondaryHover}"/>
                            <Setter Property="Scale" Value="1.02"/>
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource SecondaryPressed}"/>
                            <Setter Property="Scale" Value="0.98"/>
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style x:Key="OutlinedButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="TextColor" Value="{StaticResource Primary}"/>
        <Setter Property="BorderColor" Value="{StaticResource Primary}"/>
        <Setter Property="BorderWidth" Value="1"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Padding" Value="18,12"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource PrimaryTransparent}"/>
                            <Setter Property="Scale" Value="1.02"/>
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource Primary}"/>
                            <Setter Property="TextColor" Value="{StaticResource TextPrimary}"/>
                            <Setter Property="Scale" Value="0.98"/>
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style x:Key="DangerButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="TextColor" Value="{StaticResource Error}"/>
        <Setter Property="BorderColor" Value="{StaticResource Error}"/>
        <Setter Property="BorderWidth" Value="1"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Padding" Value="18,12"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource ErrorTransparent}"/>
                            <Setter Property="Scale" Value="1.02"/>
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource Error}"/>
                            <Setter Property="TextColor" Value="{StaticResource TextPrimary}"/>
                            <Setter Property="Scale" Value="0.98"/>
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style x:Key="GhostButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="TextColor" Value="{StaticResource Primary}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="TextColor" Value="{StaticResource PrimaryHover}"/>
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="TextColor" Value="{StaticResource PrimaryPressed}"/>
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <!-- ========== CARDS ========== -->

    <Style x:Key="Card" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{StaticResource SurfaceDark}"/>
        <Setter Property="Stroke" Value="{StaticResource BorderDefault}"/>
        <Setter Property="StrokeThickness" Value="1"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 16"/>
        <Setter Property="Padding" Value="24"/>
    </Style>

    <Style x:Key="ElevatedCard" TargetType="Border" BasedOn="{StaticResource Card}">
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="#000000" Opacity="0.3" Radius="16" Offset="0,6"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="InnerCard" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{StaticResource BackgroundDark}"/>
        <Setter Property="Stroke" Value="{StaticResource BorderDefault}"/>
        <Setter Property="StrokeThickness" Value="1"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 12"/>
        <Setter Property="Padding" Value="16"/>
    </Style>

    <Style x:Key="HighlightedCard" TargetType="Border" BasedOn="{StaticResource InnerCard}">
        <Setter Property="Stroke" Value="{StaticResource Primary}"/>
    </Style>

    <!-- ========== INPUTS ========== -->

    <Style x:Key="InputBorder" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{StaticResource BackgroundDark}"/>
        <Setter Property="Stroke" Value="{StaticResource BorderDefault}"/>
        <Setter Property="StrokeThickness" Value="1"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 10"/>
        <Setter Property="Padding" Value="12,0"/>
        <Setter Property="HeightRequest" Value="44"/>
    </Style>

    <Style x:Key="TextInput" TargetType="Entry">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}"/>
        <Setter Property="PlaceholderColor" Value="{StaticResource TextMuted}"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <Style x:Key="CodeInput" TargetType="Entry">
        <Setter Property="TextColor" Value="{StaticResource CodeString}"/>
        <Setter Property="PlaceholderColor" Value="{StaticResource TextMuted}"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <Style x:Key="MultilineInputBorder" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{StaticResource BackgroundDark}"/>
        <Setter Property="Stroke" Value="{StaticResource BorderDefault}"/>
        <Setter Property="StrokeThickness" Value="1"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 10"/>
        <Setter Property="Padding" Value="12"/>
    </Style>

    <Style x:Key="TextEditor" TargetType="Editor">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}"/>
        <Setter Property="PlaceholderColor" Value="{StaticResource TextMuted}"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <!-- ========== BADGES ========== -->

    <Style x:Key="Badge" TargetType="Border">
        <Setter Property="StrokeThickness" Value="0"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 20"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="HorizontalOptions" Value="Start"/>
        <Setter Property="VerticalOptions" Value="Center"/>
    </Style>

    <Style x:Key="StatusBadge" TargetType="Border" BasedOn="{StaticResource Badge}">
        <Setter Property="BackgroundColor" Value="{StaticResource Secondary}"/>
    </Style>

    <Style x:Key="LiveBadge" TargetType="Border" BasedOn="{StaticResource Badge}">
        <Setter Property="BackgroundColor" Value="{StaticResource Running}"/>
    </Style>

    <Style x:Key="SuccessBadge" TargetType="Border" BasedOn="{StaticResource Badge}">
        <Setter Property="BackgroundColor" Value="{StaticResource Completed}"/>
    </Style>

    <Style x:Key="WarningBadge" TargetType="Border" BasedOn="{StaticResource Badge}">
        <Setter Property="BackgroundColor" Value="{StaticResource Warning}"/>
    </Style>

    <Style x:Key="BadgeText" TargetType="Label">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}"/>
    </Style>

    <!-- ========== ICON BUTTONS ========== -->

    <Style x:Key="IconButton" TargetType="Border">
        <Setter Property="WidthRequest" Value="36"/>
        <Setter Property="HeightRequest" Value="36"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 8"/>
        <Setter Property="StrokeThickness" Value="0"/>
        <Setter Property="BackgroundColor" Value="{StaticResource Secondary}"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource SecondaryHover}"/>
                            <Setter Property="Scale" Value="1.05"/>
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style x:Key="PrimaryIconButton" TargetType="Border">
        <Setter Property="WidthRequest" Value="36"/>
        <Setter Property="HeightRequest" Value="36"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 8"/>
        <Setter Property="StrokeThickness" Value="0"/>
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource PrimaryHover}"/>
                            <Setter Property="Scale" Value="1.05"/>
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style x:Key="OutlinedIconButton" TargetType="Border">
        <Setter Property="WidthRequest" Value="36"/>
        <Setter Property="HeightRequest" Value="36"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 8"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="Stroke" Value="{StaticResource Primary}"/>
        <Setter Property="StrokeThickness" Value="1"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource PrimaryTransparent}"/>
                            <Setter Property="Scale" Value="1.05"/>
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style x:Key="DangerIconButton" TargetType="Border">
        <Setter Property="WidthRequest" Value="36"/>
        <Setter Property="HeightRequest" Value="36"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 8"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="Stroke" Value="{StaticResource Error}"/>
        <Setter Property="StrokeThickness" Value="1"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource ErrorTransparent}"/>
                            <Setter Property="Scale" Value="1.05"/>
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style x:Key="ActionBadge" TargetType="Border">
        <Setter Property="StrokeShape" Value="RoundRectangle 8"/>
        <Setter Property="StrokeThickness" Value="0"/>
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}"/>
        <Setter Property="Padding" Value="14,8"/>
        <Setter Property="HorizontalOptions" Value="Start"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource PrimaryHover}"/>
                            <Setter Property="Scale" Value="1.02"/>
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <!-- ========== TABLE ========== -->

    <Style x:Key="TableContainer" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{StaticResource SurfaceDark}"/>
        <Setter Property="Stroke" Value="{StaticResource BorderDefault}"/>
        <Setter Property="StrokeThickness" Value="1"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 12"/>
    </Style>

    <Style x:Key="TableHeaderBackground" TargetType="Grid">
        <Setter Property="BackgroundColor" Value="{StaticResource BackgroundDark}"/>
        <Setter Property="Padding" Value="20,14"/>
    </Style>

    <Style x:Key="TableDivider" TargetType="BoxView">
        <Setter Property="HeightRequest" Value="1"/>
        <Setter Property="Color" Value="{StaticResource BorderDefault}"/>
    </Style>

    <!-- ========== NAVIGATION ========== -->

    <Style x:Key="BackButton" TargetType="Border">
        <Setter Property="WidthRequest" Value="40"/>
        <Setter Property="HeightRequest" Value="40"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 10"/>
        <Setter Property="StrokeThickness" Value="1"/>
        <Setter Property="Stroke" Value="{StaticResource BorderSubtle}"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource Secondary}"/>
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <!-- ========== FAB ========== -->

    <Style x:Key="FAB" TargetType="Border">
        <Setter Property="WidthRequest" Value="56"/>
        <Setter Property="HeightRequest" Value="56"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 28"/>
        <Setter Property="StrokeThickness" Value="0"/>
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}"/>
        <Setter Property="HorizontalOptions" Value="End"/>
        <Setter Property="VerticalOptions" Value="End"/>
        <Setter Property="Margin" Value="24"/>
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="{StaticResource Primary}" Opacity="0.4" Radius="12" Offset="0,4"/>
            </Setter.Value>
        </Setter>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource PrimaryHover}"/>
                            <Setter Property="Scale" Value="1.05"/>
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <!-- ========== DIALOG ========== -->

    <Style x:Key="DialogContainer" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{StaticResource SurfaceDark}"/>
        <Setter Property="Stroke" Value="{StaticResource BorderDefault}"/>
        <Setter Property="StrokeThickness" Value="1"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 16"/>
        <Setter Property="Shadow">
            <Setter.Value>
                <Shadow Brush="#000000" Opacity="0.4" Radius="24" Offset="0,8"/>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="DialogHeader" TargetType="Grid">
        <Setter Property="BackgroundColor" Value="{StaticResource BackgroundDark}"/>
        <Setter Property="Padding" Value="24,20"/>
    </Style>

    <Style x:Key="DialogFooter" TargetType="Border">
        <Setter Property="BackgroundColor" Value="{StaticResource BackgroundDark}"/>
        <Setter Property="StrokeThickness" Value="0"/>
        <Setter Property="Padding" Value="24,16"/>
    </Style>

    <Style x:Key="CloseButton" TargetType="Border">
        <Setter Property="WidthRequest" Value="36"/>
        <Setter Property="HeightRequest" Value="36"/>
        <Setter Property="StrokeShape" Value="RoundRectangle 8"/>
        <Setter Property="StrokeThickness" Value="0"/>
        <Setter Property="BackgroundColor" Value="{StaticResource Secondary}"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource SecondaryHover}"/>
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <!-- ========== PROGRESS ========== -->

    <Style x:Key="ScoreProgress" TargetType="ProgressBar">
        <Setter Property="ProgressColor" Value="{StaticResource Primary}"/>
        <Setter Property="BackgroundColor" Value="{StaticResource Secondary}"/>
        <Setter Property="WidthRequest" Value="80"/>
    </Style>

    <!-- ========== CONTROLS ========== -->

    <Style x:Key="PrimarySwitch" TargetType="Switch">
        <Setter Property="OnColor" Value="{StaticResource Primary}"/>
        <Setter Property="ThumbColor" Value="{StaticResource TextPrimary}"/>
    </Style>

    <Style x:Key="PrimaryCheckBox" TargetType="CheckBox">
        <Setter Property="Color" Value="{StaticResource Primary}"/>
    </Style>

    <!-- ========== ADD ITEM BUTTON ========== -->

    <Style x:Key="AddItemButton" TargetType="Border">
        <Setter Property="StrokeShape" Value="RoundRectangle 10"/>
        <Setter Property="Stroke" Value="{StaticResource Primary}"/>
        <Setter Property="StrokeDashArray" Value="4,4"/>
        <Setter Property="StrokeThickness" Value="2"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="Padding" Value="16"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource PrimaryTransparent}"/>
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <!-- ========== PAGE DEFAULTS ========== -->

    <Style TargetType="Page" ApplyToDerivedTypes="True">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="BackgroundColor" Value="{StaticResource BackgroundDark}"/>
    </Style>

    <Style TargetType="ContentPage" ApplyToDerivedTypes="True">
        <Setter Property="BackgroundColor" Value="{StaticResource BackgroundDark}"/>
    </Style>

    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <Style TargetType="Entry">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}"/>
        <Setter Property="PlaceholderColor" Value="{StaticResource TextMuted}"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <Style TargetType="Editor">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}"/>
        <Setter Property="PlaceholderColor" Value="{StaticResource TextMuted}"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <Style TargetType="Picker">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}"/>
        <Setter Property="TitleColor" Value="{StaticResource TextMuted}"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
    </Style>

    <Style TargetType="SearchBar">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}"/>
        <Setter Property="PlaceholderColor" Value="{StaticResource TextMuted}"/>
        <Setter Property="CancelButtonColor" Value="{StaticResource Primary}"/>
        <Setter Property="BackgroundColor" Value="Transparent"/>
    </Style>

    <Style TargetType="Button">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}"/>
        <Setter Property="BackgroundColor" Value="{StaticResource Primary}"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource PrimaryHover}"/>
                            <Setter Property="Scale" Value="1.02"/>
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Pressed">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource PrimaryPressed}"/>
                            <Setter Property="Scale" Value="0.98"/>
                        </VisualState.Setters>
                    </VisualState>
                    <VisualState x:Name="Disabled">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="{StaticResource Secondary}"/>
                            <Setter Property="TextColor" Value="{StaticResource TextDisabled}"/>
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style TargetType="CheckBox">
        <Setter Property="Color" Value="{StaticResource Primary}"/>
    </Style>

    <Style TargetType="Switch">
        <Setter Property="OnColor" Value="{StaticResource Primary}"/>
        <Setter Property="ThumbColor" Value="{StaticResource TextPrimary}"/>
    </Style>

    <Style TargetType="ProgressBar">
        <Setter Property="ProgressColor" Value="{StaticResource Primary}"/>
        <Setter Property="BackgroundColor" Value="{StaticResource Secondary}"/>
    </Style>

    <Style TargetType="BoxView">
        <Setter Property="Color" Value="{StaticResource BorderDefault}"/>
    </Style>

    <Style TargetType="ActivityIndicator">
        <Setter Property="Color" Value="{StaticResource Primary}"/>
    </Style>

    <Style TargetType="DatePicker">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}"/>
