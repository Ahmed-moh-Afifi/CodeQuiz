<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CodeQuizDesktop.Views.Dashboard">
    <ScrollView>
        <VerticalStackLayout Padding="32,24" Spacing="28">
            
            <!-- Header Section -->
            <VerticalStackLayout Spacing="6">
                <Label Text="Dashboard" Style="{StaticResource PageTitle}"/>
                <Label Text="Welcome back! Here's an overview of your activity." Style="{StaticResource CaptionText}"/>
            </VerticalStackLayout>

            <!-- Cards Grid -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="24">
                
                <!-- Joined Exams Card -->
                <Border Grid.Column="0" Style="{StaticResource ElevatedCard}">
                    <VerticalStackLayout Spacing="20">
                        <!-- Card Header -->
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Text="Joined Quizzes" Style="{StaticResource SectionHeader}"/>
                            <Label Grid.Column="1" Text="View All →" Style="{StaticResource CaptionText}" TextColor="{StaticResource Primary}"/>
                        </Grid>

                        <!-- Active Quiz Item -->
                        <Border Style="{StaticResource HighlightedCard}">
                            <Grid RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="14">
                                <Grid ColumnDefinitions="*,Auto">
                                    <Label Text="Advanced JavaScript Patterns" Style="{StaticResource ItemTitle}"/>
                                    <Border Grid.Column="1" Style="{StaticResource LiveBadge}">
                                        <Label Text="LIVE" Style="{StaticResource BadgeText}"/>
                                    </Border>
                                </Grid>
                                <VerticalStackLayout Grid.Row="1" Spacing="4">
                                    <Label Text="Created by: Sarah Johnson" Style="{StaticResource CaptionText}"/>
                                    <Label Text="90 minutes  •  5 Questions" Style="{StaticResource CaptionText}"/>
                                </VerticalStackLayout>
                                <HorizontalStackLayout Grid.Row="2" Spacing="6">
                                    <Label Text="Ends in:" Style="{StaticResource CaptionText}"/>
                                    <Label Text="2h 30m" Style="{StaticResource ScoreText}"/>
                                </HorizontalStackLayout>
                                <Button Grid.Row="3" Text="Continue ▶" Style="{StaticResource PrimaryButton}"/>
                            </Grid>
                        </Border>

                        <!-- Completed Quiz Item -->
                        <Border Style="{StaticResource InnerCard}">
                            <Grid RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="14">
                                <Grid ColumnDefinitions="*,Auto">
                                    <Label Text="React Component Patterns" Style="{StaticResource ItemTitle}"/>
                                    <Border Grid.Column="1" Style="{StaticResource SuccessBadge}">
                                        <Label Text="COMPLETED" Style="{StaticResource BadgeText}"/>
                                    </Border>
                                </Grid>
                                <VerticalStackLayout Grid.Row="1" Spacing="4">
                                    <Label Text="Created by: Emily Taylor" Style="{StaticResource CaptionText}"/>
                                    <Label Text="Completed in 75m" Style="{StaticResource CaptionText}"/>
                                </VerticalStackLayout>
                                <HorizontalStackLayout Grid.Row="2" Spacing="6">
                                    <Label Text="Score:" Style="{StaticResource CaptionText}"/>
                                    <Label Text="92%" Style="{StaticResource SuccessText}"/>
                                </HorizontalStackLayout>
                                <Button Grid.Row="3" Text="View Results" Style="{StaticResource SecondaryButton}"/>
                            </Grid>
                        </Border>
                    </VerticalStackLayout>
                </Border>

                <!-- Created Exams Card -->
                <Border Grid.Column="1" Style="{StaticResource ElevatedCard}">
                    <VerticalStackLayout Spacing="20">
                        <!-- Card Header -->
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Text="Created Quizzes" Style="{StaticResource SectionHeader}"/>
                            <Label Grid.Column="1" Text="Manage All →" Style="{StaticResource CaptionText}" TextColor="{StaticResource Primary}"/>
                        </Grid>

                        <!-- Upcoming Quiz Item -->
                        <Border Style="{StaticResource InnerCard}">
                            <Grid RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="14">
                                <Grid ColumnDefinitions="*,Auto">
                                    <Label Text="Advanced JavaScript Patterns" Style="{StaticResource ItemTitle}"/>
                                    <Border Grid.Column="1" Style="{StaticResource WarningBadge}">
                                        <Label Text="UPCOMING" Style="{StaticResource BadgeText}" TextColor="{StaticResource BackgroundDark}"/>
                                    </Border>
                                </Grid>
                                <Label Grid.Row="1" Text="90 minutes  •  5 Questions" Style="{StaticResource CaptionText}"/>
                                <Border Grid.Row="2" Style="{StaticResource StatusBadge}" Padding="12,10">
                                    <HorizontalStackLayout Spacing="8">
                                        <Label Text="Code:" Style="{StaticResource CaptionText}"/>
                                        <Label Text="EXAM-2025-ABC" FontFamily="SFMonoRegular" FontAttributes="Bold" TextColor="{StaticResource Primary}"/>
                                    </HorizontalStackLayout>
                                </Border>
                                <Button Grid.Row="3" Text="View Details" Style="{StaticResource SecondaryButton}"/>
                            </Grid>
                        </Border>

                        <!-- Ended Quiz Item -->
                        <Border Style="{StaticResource InnerCard}">
                            <Grid RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="14">
                                <Grid ColumnDefinitions="*,Auto">
                                    <Label Text="React Component Patterns" Style="{StaticResource ItemTitle}"/>
                                    <Border Grid.Column="1" Style="{StaticResource StatusBadge}">
                                        <Label Text="ENDED" Style="{StaticResource BadgeText}"/>
                                    </Border>
                                </Grid>
                                <Label Grid.Row="1" Text="67 Submitted" Style="{StaticResource CaptionText}"/>
                                <HorizontalStackLayout Grid.Row="2" Spacing="6">
                                    <Label Text="Avg Score:" Style="{StaticResource CaptionText}"/>
                                    <Label Text="92%" Style="{StaticResource SuccessText}"/>
                                </HorizontalStackLayout>
                                <Grid Grid.Row="3" ColumnDefinitions="*,*,*" ColumnSpacing="10">
                                    <Button Text="View" Style="{StaticResource SecondaryButton}" Padding="0,12"/>
                                    <Button Grid.Column="1" Text="Edit" Style="{StaticResource OutlinedButton}" Padding="0,12"/>
                                    <Button Grid.Column="2" Text="Delete" Style="{StaticResource DangerButton}" Padding="0,12"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </VerticalStackLayout>
                </Border>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentView>
