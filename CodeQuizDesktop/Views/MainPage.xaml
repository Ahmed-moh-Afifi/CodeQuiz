<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:CodeQuizDesktop.Controls"
             xmlns:views="clr-namespace:CodeQuizDesktop.Views"
             xmlns:toolkit="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
             xmlns:vm="clr-namespace:CodeQuizDesktop.Viewmodels"
             x:Class="CodeQuizDesktop.MainPage">

    <Grid ColumnDefinitions="280,*">
        <!-- Sidebar -->
        <Grid RowDefinitions="Auto,*,Auto" BackgroundColor="{StaticResource BackgroundDark}" Padding="24,24,24,20">
            
            <!-- Logo -->
            <Border Margin="12,0,12,20" StrokeThickness="0" Background="Transparent">
                <Image Source="testlogo.png"/>
            </Border>
            
            <!-- Navigation Items -->
            <VerticalStackLayout Grid.Row="1" Spacing="8">
                <BoxView HeightRequest="1" Color="{StaticResource BorderDefault}" Margin="0,0,0,16"/>
                <controls:NavItem Text="Dashboard" IsSelected="{Binding DashboardSelected, Mode=TwoWay}" Icon="layout_grid.png"/>
                <controls:NavItem Text="Created Quizzes" IsSelected="{Binding CreatedSelected, Mode=TwoWay}" Icon="pencil.png"/>
                <controls:NavItem Text="Joined Quizzes" IsSelected="{Binding JoinedSelected, Mode=TwoWay}" Icon="copy_check.png"/>
            </VerticalStackLayout>
            
            <!-- User Profile Card -->
            <Border Grid.Row="2" StrokeThickness="1" Stroke="{StaticResource BorderDefault}" StrokeShape="RoundRectangle 16" BackgroundColor="{StaticResource SurfaceDark}">
                <Border.Shadow>
                    <Shadow Brush="#000000" Opacity="0.2" Radius="12" Offset="0,4"/>
                </Border.Shadow>
                <VerticalStackLayout Spacing="0">
                    <VerticalStackLayout Spacing="0">
                        <VerticalStackLayout.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding OpenProfileCommand}"/>
                        </VerticalStackLayout.GestureRecognizers>
                        <!-- Avatar -->
                        <Grid Padding="20,24">
                            <Border StrokeThickness="0" StrokeShape="RoundRectangle 50" HeightRequest="80" WidthRequest="80" VerticalOptions="Center" HorizontalOptions="Center" Background="{StaticResource PrimaryGradient}">
                                <Label Text="{Binding User.FirstCharInName}" FontSize="32" VerticalOptions="Center" HorizontalOptions="Center" FontAttributes="Bold"/>
                            </Border>
                        </Grid>
                        
                        <!-- User Name -->
                        <Border BackgroundColor="{StaticResource BackgroundDark}" Padding="16,12" StrokeThickness="0">
                            <Label Text="{Binding User.FullName}" FontSize="15" FontAttributes="Bold" HorizontalOptions="Center"/>
                        </Border>
                    </VerticalStackLayout>
                    
                    <!-- Logout Button -->
                    <Border StrokeThickness="0" Padding="12">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding LogoutCommand}"/>
                        </Border.GestureRecognizers>
                        <HorizontalStackLayout HorizontalOptions="Center" Spacing="8">
                            <Image Source="logout.png" WidthRequest="18" HeightRequest="18" VerticalOptions="Center">
                                <Image.Behaviors>
                                    <toolkit:IconTintColorBehavior TintColor="{StaticResource TextMuted}"/>
                                </Image.Behaviors>
                            </Image>
                            <Label Text="Logout" TextColor="{StaticResource TextMuted}" VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>
                </VerticalStackLayout>
            </Border>
        </Grid>

        <!-- Main Content -->
        <Border Grid.Column="1" BackgroundColor="{StaticResource SurfaceDark}" StrokeThickness="0">
            <Grid>
                <Grid IsVisible="{Binding DashboardSelected}">
                    <views:Dashboard x:Name="Dashboard"/>
                </Grid>
                <Grid IsVisible="{Binding CreatedSelected}">
                    <views:CreatedQuizzes x:Name="CreatedQuizzes"/>
                </Grid>
                <Grid IsVisible="{Binding JoinedSelected}">
                    <views:JoinedQuizzes x:Name="JoinedQuizzes"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</ContentPage>
