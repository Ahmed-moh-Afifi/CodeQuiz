<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:CodeQuizDesktop.Controls"
             xmlns:views="clr-namespace:CodeQuizDesktop.Views"
             xmlns:toolkit="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
             x:Class="CodeQuizDesktop.MainPage"
             BackgroundColor="#171717">
    <!--222222
    2e2e2e-->
    <Grid ColumnDefinitions="1.2*, 6*">
        <Grid RowDefinitions="Auto, Auto, *" RowSpacing="20" Padding="40,30">
            <Border Margin="20" StrokeThickness="0" Background="Transparent" >

                <Image Source="testlogo.png"/>
            </Border>
            <BoxView HeightRequest="1" Color="#1e1e1e" Margin="0,0" VerticalOptions="End"/>
            <VerticalStackLayout Spacing="10" Grid.Row="1" Margin="0, 0">
                <controls:NavItem Text="Dashboard" IsSelected="{Binding DashboardSelected, Mode=TwoWay}" Icon="layout_grid.png"/>
                <controls:NavItem Text="Created Quizzes" IsSelected="{Binding CreatedSelected, Mode=TwoWay}" Icon="pencil.png"/>
                <controls:NavItem Text="Joined Quizzes" IsSelected="{Binding JoinedSelected, Mode=TwoWay}" Icon="copy_check.png"/>

            </VerticalStackLayout>
            <BoxView Grid.Row="2" HeightRequest="1" Color="#1e1e1e" Margin="20,0" VerticalOptions="Start"/>
            <Border StrokeThickness="0.5" Grid.Row="2" VerticalOptions="End" StrokeShape="RoundRectangle 30" Margin="0,0" Stroke="#1e1e1e" Background="#171717">
                <Border.Shadow>
                    <Shadow Radius="2.5" Opacity="0.5" />
                </Border.Shadow>
                <VerticalStackLayout Spacing="0" >
                    <Grid Padding="20,30" >
                        <Border StrokeThickness="0" StrokeShape="RoundRectangle 50" HeightRequest="100" WidthRequest="100" VerticalOptions="Center" HorizontalOptions="Center">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="1,1">
                                    <GradientStop Color="#70222a" Offset="0" />
                                    <GradientStop Color="#591c21" Offset="1" />

                                </LinearGradientBrush>
                            </Border.Background>

                            <Label Text="{Binding User.FirstCharInName}" FontSize="36" VerticalOptions="Center" HorizontalOptions="Center" TextColor="White" FontAttributes="Bold"/>
                        </Border>
                    </Grid>


                    <Grid Background="#1e1e1e" Padding="20,15" >
                        <Label Text="{Binding User.FullName}" TextColor="White" FontSize="16" HorizontalOptions="Center">
                        </Label>
                    </Grid>

                    <Border StrokeThickness="0">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding LogoutCommand}"/>
                        </Border.GestureRecognizers>
                        <HorizontalStackLayout HorizontalOptions="Center">
                            <Image Source="logout.png" WidthRequest="22" HeightRequest="22" InputTransparent="True" Margin="10" VerticalOptions="Center">
                                <Image.Behaviors>
                                    <toolkit:IconTintColorBehavior TintColor="White" />
                                </Image.Behaviors>
                            </Image>
                            <Label Text="Logout" HorizontalTextAlignment="Center" TextColor="White" VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>
                </VerticalStackLayout>
            </Border>
        </Grid>
        <!--<BoxView WidthRequest="1.3" Color="#2a2a2a" Margin="0,0" HorizontalOptions="End" />-->

        <Border Grid.Column="1" Padding="20" Background="#1e1e1e" StrokeThickness="0">

            <Grid Grid.Column="1">
                <Grid IsVisible="{Binding DashboardSelected}">
                    <views:Dashboard x:Name="Dashboard"/>
                </Grid>
                <Grid IsVisible="{Binding CreatedSelected}">
                    <views:CreatedQuizzes x:Name="CreatedQuizzes"/>
                </Grid>
                <Grid IsVisible="{Binding JoinedSelected}">
                    <views:JoinedQuizzes x:Name="JoinedQuizzes"/>
                </Grid>


            </Grid>
        </Border>
    </Grid>

</ContentPage>
