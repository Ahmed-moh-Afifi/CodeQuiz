<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:CodeQuizDesktop.Models"
             xmlns:vm="clr-namespace:CodeQuizDesktop.Viewmodels"
             xmlns:controls="clr-namespace:CodeQuizDesktop.Controls"
             xmlns:toolkit="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
             x:Class="CodeQuizDesktop.Views.GradeAttempt"
             Title="GradeAttempt"
             x:DataType="vm:GradeAttemptVM">

    <Grid RowDefinitions="Auto,*">
        <!-- Header -->
        <Border StrokeThickness="0" BackgroundColor="{StaticResource BackgroundDark}" Padding="24,16">
            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="16">
                <Border Style="{StaticResource BackButton}">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ReturnCommand}"/>
                    </Border.GestureRecognizers>
                    <Image Source="arrow_back_ios_new_rounded.png" WidthRequest="18" HeightRequest="18" HorizontalOptions="Center" VerticalOptions="Center">
                        <Image.Behaviors>
                            <toolkit:IconTintColorBehavior TintColor="{StaticResource TextPrimary}"/>
                        </Image.Behaviors>
                    </Image>
                </Border>
                <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="4">
                    <Label Text="{Binding Quiz.Title}" Style="{StaticResource PageTitle}" FontSize="24"/>
                    <Label Text="Grade student submission" Style="{StaticResource CaptionText}"/>
                </VerticalStackLayout>
                <Button Grid.Column="2" Text="Save All Grades" Style="{StaticResource PrimaryButton}" VerticalOptions="Center" Command="{Binding SaveAllGradesCommand}"/>
            </Grid>
        </Border>
        <BoxView HeightRequest="1" Color="{StaticResource BorderDefault}" VerticalOptions="End"/>

        <!-- Content -->
        <Grid Grid.Row="1" ColumnDefinitions="1*,4.3*">
            <!-- Sidebar -->
            <Border StrokeThickness="0" BackgroundColor="{StaticResource BackgroundDark}">
                <Grid RowDefinitions="Auto,Auto">
                    <VerticalStackLayout Padding="24" Spacing="20">
                        <Label Text="Questions" Style="{StaticResource SectionHeader}" FontSize="16"/>

                        <FlexLayout Direction="Row" Wrap="Wrap" JustifyContent="Start" AlignItems="Center" AlignContent="Start" BindableLayout.ItemsSource="{Binding Quiz.Questions}">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate x:DataType="models:Question">
                                    <Border StrokeShape="RoundRectangle 8" BackgroundColor="{StaticResource SurfaceDark}" Padding="18,14" Stroke="{StaticResource BorderDefault}" StrokeThickness="1" Margin="3">
                                        <Border.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:GradeAttemptVM}}, Path=SpecificQuestionCommand}" CommandParameter="{Binding .}"/>
                                        </Border.GestureRecognizers>
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup x:Name="CommonStates">
                                                <VisualState x:Name="Normal"/>
                                                <VisualState x:Name="PointerOver">
                                                    <VisualState.Setters>
                                                        <Setter Property="BackgroundColor" Value="{StaticResource Secondary}"/>
                                                    </VisualState.Setters>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>
                                        <Label Text="{Binding Order}" FontSize="16" FontAttributes="Bold"/>
                                    </Border>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </FlexLayout>

                        <ProgressBar Progress="0"/>
                    </VerticalStackLayout>

                    <!-- Action Buttons -->
                    <Grid Grid.Row="1" ColumnDefinitions="*,*" ColumnSpacing="12" Padding="24,16">
                        <Button Text="Previous" Style="{StaticResource SecondaryButton}" Command="{Binding PreviousQuestionCommand}" ImageSource="arrow_back_ios_new_rounded.png" HeightRequest="40">
                            <Button.Behaviors>
                                <toolkit:IconTintColorBehavior TintColor="White"/>
                            </Button.Behaviors>
                        </Button>
                        <Button Grid.Column="1" Text="Next" Style="{StaticResource PrimaryButton}" Command="{Binding NextQuestionCommand}" ImageSource="arrow_forward_ios_rounded.png" HeightRequest="40">
                            <Button.Behaviors>
                                <toolkit:IconTintColorBehavior TintColor="White"/>
                            </Button.Behaviors>
                        </Button>
                    </Grid>
                </Grid>
            </Border>

            <BoxView WidthRequest="1" Color="{StaticResource SurfaceDark}" HorizontalOptions="End"/>

            <!-- Main Content -->
            <ScrollView Grid.Column="1">
                <VerticalStackLayout>
                    <!-- Question Header with Grade Input -->
                    <Border BackgroundColor="{StaticResource SurfaceDark}" Padding="24,20" StrokeThickness="0">
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Text="{Binding SelectedQuestion.Order, StringFormat='Question {0}'}" Style="{StaticResource SectionHeader}" VerticalOptions="Center"/>
                            <Border Grid.Column="1" HorizontalOptions="End" StrokeShape="RoundRectangle 20" StrokeThickness="0" Padding="15,5" BackgroundColor="#171717">
                                <Grid ColumnDefinitions="Auto,Auto,Auto,Auto" ColumnSpacing="5">
                                    <Label Text="Grade: " Style="{StaticResource BodyText}" HorizontalOptions="Center" VerticalOptions="Center"/>
                                    <Entry Grid.Column="1" Text="{Binding Grade}" Keyboard="Numeric" TextColor="White" Margin="0" MinimumHeightRequest="0" MinimumWidthRequest="35"/>
                                    <Label Grid.Column="2" Text=" / " Style="{StaticResource BodyText}" TextColor="{StaticResource TextMuted}" VerticalOptions="Center"/>
                                    <Label Grid.Column="3" Text="{Binding SelectedQuestion.Points}" Style="{StaticResource BodyText}" TextColor="{StaticResource TextMuted}" VerticalOptions="Center"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Question Content -->
                    <VerticalStackLayout Spacing="32" Padding="24">
                        <Label Text="{Binding SelectedQuestion.Statement}" Style="{StaticResource BodyText}" FontSize="16" LineBreakMode="WordWrap"/>

                        <!-- Test Cases -->
                        <VerticalStackLayout Spacing="16" IsVisible="{Binding HasTestCases}">
                            <Label Text="Examples" Style="{StaticResource SectionHeader}" FontSize="16"/>
                            <CollectionView ItemsSource="{Binding SelectedQuestion.TestCases}">
                                <CollectionView.ItemsLayout>
                                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="12"/>
                                </CollectionView.ItemsLayout>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate x:DataType="models:TestCase">
                                        <Border Style="{StaticResource InnerCard}">
                                            <Grid RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="12">
                                                <Label Text="Input" Style="{StaticResource CaptionText}" FontAttributes="Bold"/>
                                                <Border Grid.Row="1" Style="{StaticResource InnerCard}" BackgroundColor="{StaticResource SurfaceDark}" MinimumHeightRequest="30" MaximumHeightRequest="150">
                                                    <ScrollView>
                                                        <Label Text="{Binding InputInOneString}" Style="{StaticResource CodeLabel}"/>
                                                    </ScrollView>
                                                </Border>
                                                <Label Grid.Row="2" Text="Expected Output" Style="{StaticResource CaptionText}" FontAttributes="Bold"/>
                                                <Border Grid.Row="3" Style="{StaticResource InnerCard}" BackgroundColor="{StaticResource SurfaceDark}" MinimumHeightRequest="30" MaximumHeightRequest="150">
                                                    <ScrollView>
                                                        <Label Text="{Binding ExpectedOutput}" Style="{StaticResource CodeLabel}"/>
                                                    </ScrollView>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </VerticalStackLayout>
                        
                        <!-- AI Assessment Panel -->
                        <Border Style="{StaticResource InnerCard}" IsVisible="{Binding HasAiAssessment}" Padding="20">
                            <VerticalStackLayout Spacing="16">
                                <!-- AI Assessment Header -->
                                <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                                    <Border StrokeShape="RoundRectangle 8" 
                                            BackgroundColor="{Binding CurrentAiAssessment.IsValid, Converter={StaticResource AiValidityToColorConverter}}" 
                                            Padding="12,6" 
                                            StrokeThickness="0"
                                            VerticalOptions="Center">
                                        <Label Text="{Binding AiValidityText}" 
                                               FontSize="14" 
                                               FontAttributes="Bold" 
                                               TextColor="White"/>
                                    </Border>
                                    <Label Grid.Column="1" 
                                           Text="AI Assessment" 
                                           Style="{StaticResource SectionHeader}" 
                                           FontSize="16" 
                                           VerticalOptions="Center"/>
                                    <!-- Re-run AI Assessment Button -->
                                    <Border Grid.Column="2" 
                                            StrokeShape="RoundRectangle 8" 
                                            BackgroundColor="{StaticResource SurfaceDark}" 
                                            Stroke="{StaticResource BorderDefault}"
                                            StrokeThickness="1"
                                            Padding="10"
                                            WidthRequest="40"
                                            HeightRequest="40"
                                            IsVisible="{Binding IsRerunningAiAssessment, Converter={StaticResource InverseBoolConverter}}">
                                        <Border.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding RerunAiAssessmentCommand}"/>
                                        </Border.GestureRecognizers>
                                        <Image Source="restart.png" 
                                               WidthRequest="18" 
                                               HeightRequest="18" 
                                               HorizontalOptions="Center" 
                                               VerticalOptions="Center">
                                            <Image.Behaviors>
                                                <toolkit:IconTintColorBehavior TintColor="{StaticResource TextPrimary}"/>
                                            </Image.Behaviors>
                                        </Image>
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup x:Name="CommonStates">
                                                <VisualState x:Name="Normal"/>
                                                <VisualState x:Name="PointerOver">
                                                    <VisualState.Setters>
                                                        <Setter Property="BackgroundColor" Value="{StaticResource Secondary}"/>
                                                    </VisualState.Setters>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>
                                    </Border>
                                    <!-- Loading indicator when re-running AI -->
                                    <ActivityIndicator Grid.Column="2"
                                                       IsRunning="{Binding IsRerunningAiAssessment}"
                                                       IsVisible="{Binding IsRerunningAiAssessment}"
                                                       WidthRequest="24"
                                                       HeightRequest="24"
                                                       Color="{StaticResource Primary}"/>
                                </Grid>
                                
                                <!-- Flags Section -->
                                <VerticalStackLayout Spacing="8" IsVisible="{Binding HasFlags}">
                                    <Label Text="Flags" Style="{StaticResource CaptionText}" FontAttributes="Bold"/>
                                    <FlexLayout Direction="Row" Wrap="Wrap" JustifyContent="Start" BindableLayout.ItemsSource="{Binding CurrentAiAssessment.Flags}">
                                        <BindableLayout.ItemTemplate>
                                            <DataTemplate x:DataType="x:String">
                                                <Border StrokeShape="RoundRectangle 6" 
                                                        BackgroundColor="#7C2D12" 
                                                        Padding="10,5" 
                                                        Margin="0,0,8,8" 
                                                        StrokeThickness="0">
                                                    <HorizontalStackLayout Spacing="4">
                                                        <Image Source="flag.png" WidthRequest="12" HeightRequest="12" VerticalOptions="Center">
                                                            <Image.Behaviors>
                                                                <toolkit:IconTintColorBehavior TintColor="#FBBF24"/>
                                                            </Image.Behaviors>
                                                        </Image>
                                                        <Label Text="{Binding .}" 
                                                               FontSize="12" 
                                                               TextColor="#FBBF24"/>
                                                    </HorizontalStackLayout>
                                                </Border>
                                            </DataTemplate>
                                        </BindableLayout.ItemTemplate>
                                    </FlexLayout>
                                </VerticalStackLayout>
                                
                                <!-- Reasoning Section -->
                                <VerticalStackLayout Spacing="8">
                                    <Label Text="AI Reasoning" Style="{StaticResource CaptionText}" FontAttributes="Bold"/>
                                    <Border Style="{StaticResource InnerCard}" BackgroundColor="{StaticResource SurfaceDark}" Padding="12">
                                        <Label Text="{Binding CurrentAiAssessment.Reasoning}" 
                                               Style="{StaticResource BodyText}" 
                                               FontSize="14" 
                                               LineBreakMode="WordWrap"/>
                                    </Border>
                                </VerticalStackLayout>
                                
                                <!-- AI Model Info -->
                                <HorizontalStackLayout Spacing="8" HorizontalOptions="End">
                                    <Label Text="Model:" Style="{StaticResource CaptionText}" FontSize="11"/>
                                    <Label Text="{Binding CurrentAiAssessment.Model}" Style="{StaticResource CaptionText}" FontSize="11"/>
                                    <Label Text="â€¢" Style="{StaticResource CaptionText}" FontSize="11"/>
                                    <Label Text="{Binding CurrentAiAssessment.AssessedAtLocal, StringFormat='{0:MMM dd, yyyy HH:mm}'}" 
                                           Style="{StaticResource CaptionText}" 
                                           FontSize="11"/>
                                </HorizontalStackLayout>
                                
                                <!-- AI Suggested Grade -->
                                <Border StrokeShape="RoundRectangle 8" 
                                        BackgroundColor="{StaticResource SurfaceDark}" 
                                        Padding="16,12" 
                                        Stroke="{StaticResource Primary}"
                                        StrokeThickness="1"
                                        IsVisible="{Binding HasSuggestedGrade}">
                                    <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                                        <Image Source="lightbulb.png" WidthRequest="20" HeightRequest="20" VerticalOptions="Center">
                                            <Image.Behaviors>
                                                <toolkit:IconTintColorBehavior TintColor="{StaticResource Primary}"/>
                                            </Image.Behaviors>
                                        </Image>
                                        <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="2">
                                            <Label Text="AI Suggested Grade" 
                                                   FontSize="12" 
                                                   TextColor="{StaticResource TextPrimary}" 
                                                   FontAttributes="Bold"/>
                                            <Label Text="Based on code quality and correctness analysis" 
                                                   FontSize="10" 
                                                   TextColor="{StaticResource TextMuted}"/>
                                        </VerticalStackLayout>
                                        <HorizontalStackLayout Grid.Column="2" Spacing="8" VerticalOptions="Center">
                                            <Border StrokeShape="RoundRectangle 8" 
                                                    BackgroundColor="{StaticResource Primary}" 
                                                    Padding="12,6" 
                                                    StrokeThickness="0">
                                                <HorizontalStackLayout Spacing="2">
                                                    <Label Text="{Binding SuggestedGradeActual, StringFormat='{0:F1}'}" 
                                                           FontSize="18" 
                                                           FontAttributes="Bold" 
                                                           TextColor="White"/>
                                                    <Label Text="{Binding SelectedQuestion.Points, StringFormat=' / {0}'}" 
                                                           FontSize="12" 
                                                           TextColor="White" 
                                                           Opacity="0.7"
                                                           VerticalOptions="End"
                                                           Margin="0,0,0,2"/>
                                                </HorizontalStackLayout>
                                            </Border>
                                            <Label Text="{Binding SuggestedGrade, StringFormat='({0:P0})'}" 
                                                   FontSize="12" 
                                                   TextColor="{StaticResource TextMuted}"
                                                   VerticalOptions="Center"/>
                                        </HorizontalStackLayout>
                                    </Grid>
                                </Border>
                            </VerticalStackLayout>
                        </Border>
                        
                        <!-- AI Assessment Pending Indicator -->
                        <Border Style="{StaticResource InnerCard}" 
                                IsVisible="{Binding HasAiAssessment, Converter={StaticResource InverseBoolConverter}}" 
                                Padding="16">
                            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                                <HorizontalStackLayout Spacing="12" HorizontalOptions="Start">
                                    <ActivityIndicator IsRunning="{Binding IsEvaluating}" 
                                                       IsVisible="{Binding IsEvaluating}"
                                                       HeightRequest="20" 
                                                       WidthRequest="20" 
                                                       Color="{StaticResource Primary}"/>
                                    <Label Text="{Binding EvaluationStatus, TargetNullValue='AI assessment not available'}" 
                                           Style="{StaticResource CaptionText}" 
                                           FontSize="14" 
                                           VerticalOptions="Center"/>
                                </HorizontalStackLayout>
                                <!-- Run AI Assessment Button (when no assessment exists) -->
                                <Grid Grid.Column="1" IsVisible="{Binding IsEvaluating, Converter={StaticResource InverseBoolConverter}}">
                                    <Border StrokeShape="RoundRectangle 8" 
                                            BackgroundColor="{StaticResource Primary}" 
                                            Padding="12,8"
                                            StrokeThickness="0"
                                            IsVisible="{Binding IsRerunningAiAssessment, Converter={StaticResource InverseBoolConverter}}">
                                        <Border.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding RerunAiAssessmentCommand}"/>
                                        </Border.GestureRecognizers>
                                        <HorizontalStackLayout Spacing="8">
                                            <Image Source="robot.png" 
                                                   WidthRequest="18" 
                                                   HeightRequest="18" 
                                                   VerticalOptions="Center">
                                                <Image.Behaviors>
                                                    <toolkit:IconTintColorBehavior TintColor="White"/>
                                                </Image.Behaviors>
                                            </Image>
                                            <Label Text="Run AI Assessment" 
                                                   FontSize="12" 
                                                   TextColor="White" 
                                                   VerticalOptions="Center"/>
                                        </HorizontalStackLayout>
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup x:Name="CommonStates">
                                                <VisualState x:Name="Normal"/>
                                                <VisualState x:Name="PointerOver">
                                                    <VisualState.Setters>
                                                        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryDark}"/>
                                                    </VisualState.Setters>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>
                                    </Border>
                                    <ActivityIndicator IsRunning="{Binding IsRerunningAiAssessment}"
                                                       IsVisible="{Binding IsRerunningAiAssessment}"
                                                       WidthRequest="24"
                                                       HeightRequest="24"
                                                       Color="{StaticResource Primary}"
                                                       HorizontalOptions="Center"/>
                                </Grid>
                            </Grid>
                        </Border>

                        <!-- Instructor Feedback Section -->
                        <Border Style="{StaticResource InnerCard}" Padding="20">
                            <VerticalStackLayout Spacing="12">
                                <Label Text="Instructor Feedback" Style="{StaticResource SectionHeader}" FontSize="16"/>
                                <Label Text="Add a comment for the student about their solution (optional)" Style="{StaticResource CaptionText}"/>
                                <Border StrokeShape="RoundRectangle 8" 
                                        BackgroundColor="{StaticResource SurfaceDark}" 
                                        Stroke="{StaticResource BorderDefault}"
                                        StrokeThickness="1"
                                        Padding="12">
                                    <Editor Text="{Binding Feedback}" 
                                            Placeholder="Enter feedback for this solution..."
                                            PlaceholderColor="{StaticResource TextMuted}"
                                            TextColor="{StaticResource TextPrimary}"
                                            AutoSize="TextChanges"
                                            MinimumHeightRequest="80"
                                            MaximumHeightRequest="200"/>
                                </Border>
                            </VerticalStackLayout>
                        </Border>
                    </VerticalStackLayout>

                    <!-- Code Editor -->
                    <controls:CodeEditor 
                        ShowError="True"
                        ShowOutput="True"
                        AllowExecution="True" 
                        EditorType="ReadOnly"
                        Language="{Binding SelectedQuestion.QuestionConfiguration.Language}"
                        Code="{Binding CodeInEditor}"
                        HeightRequest="800"/>
                </VerticalStackLayout>
            </ScrollView>
        </Grid>
    </Grid>
</ContentPage>