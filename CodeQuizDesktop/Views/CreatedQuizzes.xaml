<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:CodeQuizDesktop.Models"
             xmlns:vm="clr-namespace:CodeQuizDesktop.Viewmodels"
             x:Class="CodeQuizDesktop.Views.CreatedQuizzes"
             x:DataType="vm:CreatedQuizzesVM"
             xmlns:toolkit="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui">

    <Grid RowDefinitions="Auto,*" RowSpacing="24" Padding="32,24">

        <!-- Header Section -->
        <Grid ColumnDefinitions="*,Auto">
            <VerticalStackLayout VerticalOptions="Center" Spacing="6">
                <Label Text="Created Quizzes" Style="{StaticResource PageTitle}"/>
                <Label Text="Manage and monitor your quizzes" Style="{StaticResource CaptionText}"/>
            </VerticalStackLayout>

            <Button Grid.Column="1" Text="Create Quiz" Style="{StaticResource PrimaryButton}" Command="{Binding CreateQuizCommand}" VerticalOptions="Center"/>
        </Grid>

        <!-- Content Section -->
        <Grid Grid.Row="1" RowDefinitions="Auto,*" RowSpacing="16">

            <!-- Filters Row --><!--
            <Grid ColumnDefinitions="180,*,250" ColumnSpacing="16">
                <Border Style="{StaticResource InputBorder}">
                    <Picker Title="All Status"/>
                </Border>
                <Border Grid.Column="2" Style="{StaticResource InputBorder}" HorizontalOptions="End" WidthRequest="250">
                    <SearchBar Placeholder="Search quizzes..."/>
                </Border>
            </Grid>-->

            <!-- Data Table -->
            <Border Grid.Row="1" Style="{StaticResource TableContainer}">
                <Grid RowDefinitions="Auto,*">
                    <!-- Table Header -->
                    <Grid ColumnDefinitions="1.5*,*,1.5*,*,*,*,*,*,*" Style="{StaticResource TableHeaderBackground}">
                        <Label Text="QUIZ TITLE" Style="{StaticResource TableHeader}"/>
                        <Label Grid.Column="1" Text="STATUS" Style="{StaticResource TableHeader}"/>
                        <Label Grid.Column="2" Text="SCHEDULE" Style="{StaticResource TableHeader}"/>
                        <Label Grid.Column="3" Text="DURATION" Style="{StaticResource TableHeader}"/>
                        <Label Grid.Column="4" Text="QUESTIONS" Style="{StaticResource TableHeader}"/>
                        <Label Grid.Column="5" Text="PARTICIPANTS" Style="{StaticResource TableHeader}"/>
                        <Label Grid.Column="6" Text="SUBMITTED" Style="{StaticResource TableHeader}"/>
                        <Label Grid.Column="7" Text="AVG SCORE" Style="{StaticResource TableHeader}"/>
                        <Label Grid.Column="8" Text="ACTIONS" Style="{StaticResource TableHeader}"/>
                    </Grid>

                    <!-- Table Body -->
                    <CollectionView Grid.Row="1" ItemsSource="{Binding AllExaminerQuizzes}">
                        <CollectionView.EmptyView>
                            <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Padding="40">
                                <Label Text="No quizzes created yet" TextColor="{StaticResource TextMuted}" FontSize="18" HorizontalOptions="Center"/>
                                <Label Text="Click the button above to create your first quiz" TextColor="{StaticResource TextDisabled}" FontSize="14" HorizontalOptions="Center" Margin="0,10,0,0"/>
                            </VerticalStackLayout>
                        </CollectionView.EmptyView>
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:ExaminerQuiz">
                                <VerticalStackLayout Spacing="8">
                                    <BoxView Style="{StaticResource TableDivider}" Margin="10"/>
                                    <Grid ColumnDefinitions="1.5*,*,1.5*,*,*,*,*,*,*" Padding="20,16">
                                        <!-- Quiz Title & Code -->
                                        <VerticalStackLayout VerticalOptions="Center" Spacing="10">
                                            <Label Text="{Binding Title}" Style="{StaticResource ItemTitle}"/>
                                            <Border Style="{StaticResource StatusBadge}">
                                                <Label Text="{Binding Code}" FontFamily="SFMonoRegular" FontSize="11" FontAttributes="Bold" TextColor="White"/>
                                            </Border>
                                        </VerticalStackLayout>

                                        <!-- Status Badge -->
                                        <Border Grid.Column="1" Style="{StaticResource LiveBadge}" IsVisible="{Binding IsRunning}">
                                            <Label Text="Running" Style="{StaticResource BadgeText}"/>
                                        </Border>
                                        <Border Grid.Column="1" Style="{StaticResource SuccessBadge}" IsVisible="{Binding IsEnded}">
                                            <Label Text="Ended" Style="{StaticResource BadgeText}"/>
                                        </Border>
                                        <Border Grid.Column="1" Style="{StaticResource WarningBadge}" IsVisible="{Binding IsUpcoming}">
                                            <Label Text="Upcoming" Style="{StaticResource BadgeText}"/>
                                        </Border>

                                        <!-- Schedule -->
                                        <VerticalStackLayout Grid.Column="2" VerticalOptions="Center" Spacing="4">
                                            <HorizontalStackLayout Spacing="6">
                                                <Label Text="Start:" Style="{StaticResource CaptionText}" FontSize="13"/>
                                                <Label Text="{Binding StartDateString}" Style="{StaticResource BodyText}" FontSize="13"/>
                                            </HorizontalStackLayout>
                                            <HorizontalStackLayout Spacing="6">
                                                <Label Text="End:" Style="{StaticResource CaptionText}" FontSize="13"/>
                                                <Label Text="{Binding EndDateString}" Style="{StaticResource BodyText}" FontSize="13"/>
                                            </HorizontalStackLayout>
                                        </VerticalStackLayout>

                                        <Label Grid.Column="3" Text="{Binding DurationString}" Style="{StaticResource BodyText}" VerticalOptions="Center"/>
                                        <Label Grid.Column="4" Text="{Binding QustionsCount}" Style="{StaticResource BodyText}" VerticalOptions="Center"/>
                                        <Label Grid.Column="5" Text="{Binding AttemptsCount}" Style="{StaticResource BodyText}" VerticalOptions="Center"/>

                                        <Label Grid.Column="6" Style="{StaticResource BodyText}" VerticalOptions="Center">
                                            <Label.Text>
                                                <MultiBinding StringFormat="{}{0}/{1}">
                                                    <Binding Path="SubmittedAttemptsCount"/>
                                                    <Binding Path="AttemptsCount"/>
                                                </MultiBinding>
                                            </Label.Text>
                                        </Label>

                                        <Label Grid.Column="7" Text="{Binding AveragePercentage, StringFormat='{0:F1}%'}" Style="{StaticResource SuccessText}" VerticalOptions="Center"/>

                                        <!-- Action Buttons -->
                                        <HorizontalStackLayout Grid.Column="8" Spacing="10" VerticalOptions="Center">
                                            <Border Style="{StaticResource IconButton}">
                                                <Border.GestureRecognizers>
                                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CreatedQuizzesVM}}, Path=ViewQuizCommand}" CommandParameter="{Binding .}"/>
                                                </Border.GestureRecognizers>
                                                <Image Source="eye.png" WidthRequest="18" HeightRequest="18" HorizontalOptions="Center" VerticalOptions="Center">
                                                    <Image.Behaviors>
                                                        <toolkit:IconTintColorBehavior TintColor="{StaticResource TextSecondary}"/>
                                                    </Image.Behaviors>
                                                </Image>
                                            </Border>
                                            <Border Style="{StaticResource OutlinedIconButton}">
                                                <Border.GestureRecognizers>
                                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CreatedQuizzesVM}}, Path=EditQuizCommand}" CommandParameter="{Binding .}"/>
                                                </Border.GestureRecognizers>
                                                <Image Source="pencil.png" WidthRequest="18" HeightRequest="18" HorizontalOptions="Center" VerticalOptions="Center">
                                                    <Image.Behaviors>
                                                        <toolkit:IconTintColorBehavior TintColor="{StaticResource Primary}"/>
                                                    </Image.Behaviors>
                                                </Image>
                                            </Border>
                                            <Border Style="{StaticResource DangerIconButton}">
                                                <Border.GestureRecognizers>
                                                    <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CreatedQuizzesVM}}, Path=DeleteQuizCommand}" CommandParameter="{Binding .}"/>
                                                </Border.GestureRecognizers>
                                                <Image Source="trash.png" WidthRequest="18" HeightRequest="18" HorizontalOptions="Center" VerticalOptions="Center">
                                                    <Image.Behaviors>
                                                        <toolkit:IconTintColorBehavior TintColor="{StaticResource Error}"/>
                                                    </Image.Behaviors>
                                                </Image>
                                            </Border>
                                        </HorizontalStackLayout>
                                    </Grid>
                                </VerticalStackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</ContentView>
