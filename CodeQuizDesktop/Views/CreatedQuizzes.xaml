<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:CodeQuizDesktop.Models"
             xmlns:vm="clr-namespace:CodeQuizDesktop.Viewmodels"
             x:Class="CodeQuizDesktop.Views.CreatedQuizzes"
             x:DataType="vm:CreatedQuizzesVM"
             xmlns:toolkit="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui">

    <Grid>
        <Grid RowDefinitions="Auto, *" RowSpacing="30" IsVisible="{Binding IsNotBusy}">

            <Border Grid.Row="0" StrokeThickness="0">
                <Grid>
                    <VerticalStackLayout VerticalOptions="Center" Spacing="10">
                        <Label Text="Created Quizzes" FontSize="28" FontAttributes="Bold" TextColor="White"/>
                    </VerticalStackLayout>
                    <HorizontalStackLayout HorizontalOptions="End" VerticalOptions="Center" Spacing="10">
                        <Button Text="Create New Quiz" CornerRadius="20" HeightRequest="25" HorizontalOptions="End" VerticalOptions="Start" BackgroundColor="#591c21" Command="{Binding CreateQuizCommand}"/>
                    </HorizontalStackLayout>
                </Grid>
            </Border>

            <Grid Grid.Row="1" RowDefinitions="Auto,*">

                <Grid RowDefinitions="*,*" ColumnDefinitions="200,Auto,Auto,*" ColumnSpacing="10" RowSpacing="5" Grid.Row="0">
                    <Border Grid.Row="1" HeightRequest="45" StrokeThickness="0" StrokeShape="RoundRectangle 20" BackgroundColor="#2e2e2e">
                        <Picker Title="" TextColor="White"/>
                    </Border>
                    <Border Grid.Row="1" Grid.Column="3" WidthRequest="250" HeightRequest="45" HorizontalOptions="End" VerticalOptions="Center" StrokeThickness="0" StrokeShape="RoundRectangle 20" BackgroundColor="#2e2e2e">
                        <SearchBar Placeholder="Search quizzes..." TextColor="White"/>
                    </Border>
                </Grid>

                <!--TABLE-->
                <Border Grid.Row="1" StrokeShape="RoundRectangle 10" Background="#2e2e2e" StrokeThickness="0" Margin="0,20,0,0">
                    <Border.Shadow>
                        <Shadow Radius="2.5" Opacity="0.5" />
                    </Border.Shadow>
                    <Grid RowDefinitions="Auto,*">

                        <Grid Grid.Row="0" ColumnDefinitions="1.5*, *, 1.5*, *, *, *, *, *, *" BackgroundColor="#212121" Padding="20, 10">
                            <Label Text="QUIZ TITLE" Grid.Column="0" TextColor="#888888" VerticalOptions="Center"/>
                            <Label Text="STATUS" Grid.Column="1" TextColor="#888888" VerticalOptions="Center"/>
                            <Label Text="SCHEDULE" Grid.Column="2" TextColor="#888888" VerticalOptions="Center"/>
                            <Label Text="DURATION" Grid.Column="3" TextColor="#888888" VerticalOptions="Center"/>
                            <Label Text="QUESTIONS" Grid.Column="4" TextColor="#888888" VerticalOptions="Center"/>
                            <Label Text="PARTICIPANTS" Grid.Column="5" TextColor="#888888" VerticalOptions="Center"/>
                            <Label Text="SUBMITTED" Grid.Column="6" TextColor="#888888" VerticalOptions="Center"/>
                            <Label Text="AVG SCORE" Grid.Column="7" TextColor="#888888" VerticalOptions="Center"/>
                            <Label Text="ACTIONS" Grid.Column="8" TextColor="#888888" VerticalOptions="Center"/>
                        </Grid>

                        <CollectionView Grid.Row="1" ItemsSource="{Binding AllExaminerQuizzes}">
                            <CollectionView.EmptyView>
                                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Padding="40">
                                    <Label Text="No quizzes created yet" TextColor="#888888" FontSize="18" FontFamily="InterRegular" HorizontalOptions="Center"/>
                                    <Label Text="Click 'Create New Quiz' to get started" TextColor="#666666" FontSize="14" FontFamily="InterRegular" HorizontalOptions="Center" Margin="0,10,0,0"/>
                                </VerticalStackLayout>
                            </CollectionView.EmptyView>
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:ExaminerQuiz">
                                    <Grid ColumnDefinitions="1.5*, *, 1.5*, *, *, *, *, *, *" Padding="20">
                                        <BoxView Grid.ColumnSpan="9" HeightRequest="1" Color="#2a2a2a" Margin="0,0" VerticalOptions="Start"/>
                                        <VerticalStackLayout Grid.Column="0" VerticalOptions="Center" Spacing="10">
                                            <Label Text="{Binding Title}" TextColor="White" VerticalOptions="Center"/>
                                            <Border VerticalOptions="Center" HorizontalOptions="Start" Padding="10,5" StrokeShape="RoundRectangle 20" StrokeThickness="0" BackgroundColor="#888888">
                                                <Label Text="{Binding Code}" TextColor="White" />
                                            </Border>
                                        </VerticalStackLayout>
                                        <Border Grid.Column="1" VerticalOptions="Center" HorizontalOptions="Start" Padding="10,5" StrokeShape="RoundRectangle 20" StrokeThickness="0" BackgroundColor="#888888">
                                            <Label Text="{Binding Status}" TextColor="White" />
                                        </Border>
                                        <VerticalStackLayout Grid.Column="2" VerticalOptions="Center" Spacing="5">
                                            <Label Text="Start:" TextColor="#888888" />
                                            <Label Text="{Binding StartDateString}" TextColor="White" />
                                            <Label Text="End:" TextColor="#888888"  />
                                            <Label Text="{Binding EndDateString}" TextColor="White"  />
                                        </VerticalStackLayout>
                                        <Label Text="{Binding DurationString}" TextColor="White" Grid.Column="3" VerticalOptions="Center"/>
                                        <Label Text="{Binding QustionsCount}" TextColor="White" Grid.Column="4" VerticalOptions="Center"/>
                                        <Label Text="{Binding AttemptsCount}" TextColor="White" Grid.Column="5" VerticalOptions="Center"/>
                                        <Label TextColor="White" Grid.Column="6" VerticalOptions="Center">
                                            <Label.Text>
                                                <MultiBinding StringFormat="{}{0}/{1}">
                                                    <Binding Path="SubmittedAttemptsCount" />
                                                    <Binding Path="AttemptsCount" />
                                                </MultiBinding>
                                            </Label.Text>
                                        </Label>
                                        <Label Text="{Binding AverageAttemptScore}" TextColor="White" Grid.Column="7" VerticalOptions="Center"/>
                                        <Grid Grid.Column="8">
                                            <HorizontalStackLayout Spacing="15" VerticalOptions="Center">
                                                <Border WidthRequest="33" HeightRequest="33" StrokeShape="RoundRectangle 20" Background="#888888" StrokeThickness="0" >
                                                    <Border.GestureRecognizers>
                                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource Mode=FindAncestorBindingContext, AncestorType={x:Type vm:CreatedQuizzesVM}}, Path=ViewQuizCommand}" CommandParameter="{Binding .}" />
                                                    </Border.GestureRecognizers>
                                                    <Border.Shadow>
                                                        <Shadow Opacity="0" Radius="0"/>
                                                    </Border.Shadow>
                                                    <Image Source="eye.png" WidthRequest="22" HeightRequest="22" HorizontalOptions="Center" VerticalOptions="Center">
                                                        <Image.Behaviors>
                                                            <toolkit:IconTintColorBehavior TintColor="White" />
                                                        </Image.Behaviors>
                                                    </Image>
                                                </Border>
                                                <Border WidthRequest="33" HeightRequest="33" StrokeShape="RoundRectangle 20" Background="#888888" StrokeThickness="0" >
                                                    <Border.GestureRecognizers>
                                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource Mode=FindAncestorBindingContext, AncestorType={x:Type vm:CreatedQuizzesVM}}, Path=EditQuizCommand}" CommandParameter="{Binding .}"/>
                                                    </Border.GestureRecognizers>
                                                    <Border.Shadow>
                                                        <Shadow Opacity="0" Radius="0"/>
                                                    </Border.Shadow>
                                                    <Image Source="pencil.png" WidthRequest="22" HeightRequest="22" HorizontalOptions="Center" VerticalOptions="Center">
                                                        <Image.Behaviors>
                                                            <toolkit:IconTintColorBehavior TintColor="White" />
                                                        </Image.Behaviors>
                                                    </Image>
                                                </Border>
                                                <Border WidthRequest="33" HeightRequest="33" StrokeShape="RoundRectangle 20" Background="#888888" StrokeThickness="0" HorizontalOptions="End">
                                                    <Border.GestureRecognizers>
                                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource Mode=FindAncestorBindingContext, AncestorType={x:Type vm:CreatedQuizzesVM}}, Path=DeleteQuizCommand}" CommandParameter="{Binding .}"/>
                                                    </Border.GestureRecognizers>
                                                    <Border.Shadow>
                                                        <Shadow Opacity="0" Radius="0"/>
                                                    </Border.Shadow>
                                                    <Image Source="trash.png" WidthRequest="22" HeightRequest="22" HorizontalOptions="Center" VerticalOptions="Center">
                                                        <Image.Behaviors>
                                                            <toolkit:IconTintColorBehavior TintColor="White" />
                                                        </Image.Behaviors>
                                                    </Image>
                                                </Border>
                                            </HorizontalStackLayout>
                                        </Grid>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                    </Grid>
                </Border>
            </Grid>
        </Grid>
        
        <!-- Loading Overlay -->
        <Grid BackgroundColor="#1e1e1e" IsVisible="{Binding IsBusy}">
            <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="20">
                <ActivityIndicator IsRunning="{Binding IsBusy}" Color="#591c21" WidthRequest="50" HeightRequest="50"/>
                <Label Text="{Binding BusyMessage}" FontFamily="InterRegular" FontSize="16" TextColor="#D4D4D4" HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentView>
