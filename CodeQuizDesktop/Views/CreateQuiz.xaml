<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
             xmlns:rv="http://sharpnado.com"
             xmlns:vm="clr-namespace:CodeQuizDesktop.Viewmodels"
             x:Class="CodeQuizDesktop.Views.CreateQuiz"
             Title="CreateQuiz"
             BackgroundColor="#1e1e1e">
    <Grid RowDefinitions="Auto, *">


        <Grid ColumnDefinitions="Auto,Auto,*" ColumnSpacing="10" Padding="20,20,20,20" BackgroundColor="#171717">
            <Border  WidthRequest="30" HeightRequest="35" StrokeShape="RoundRectangle 10" StrokeThickness="1" Stroke="White">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding ReturnCommand}"/>
                </Border.GestureRecognizers>
                <Border.Shadow>
                    <Shadow Opacity="0" Radius="0"/>
                </Border.Shadow>
                <Image Source="arrow_back_ios_new_rounded.png" WidthRequest="22" HeightRequest="22" HorizontalOptions="Center" VerticalOptions="Center">
                    <Image.Behaviors>
                        <toolkit:IconTintColorBehavior TintColor="White" />
                    </Image.Behaviors>

                </Image>
            </Border>
            <Label Grid.Column="1" Text="Untitled Quiz 1" FontSize="30" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center"/>
            <HorizontalStackLayout Grid.Column="2" HorizontalOptions="End" VerticalOptions="Center" Spacing="10" >
                <Button Text="Settings" BackgroundColor="#591c21" Command="{Binding QuizSettingsCommand}"/>
                <Button Text="Save" BackgroundColor="#591c21"/>

            </HorizontalStackLayout>
        </Grid>
        <BoxView HeightRequest="1" Color="#3b3b3b" Margin="0,0" VerticalOptions="End"/>
        <Grid Grid.Row="1" ColumnDefinitions="*,3*,*" Padding="30">
            <Grid Grid.Column="1" RowDefinitions="Auto,3*" RowSpacing="20">
                <Border StrokeThickness="0" StrokeShape="RoundRectangle 20" BackgroundColor="#2e2e2e" Padding="20">
                    <Border.Shadow>
                        <Shadow Radius="2.5" Opacity="0.5" />
                    </Border.Shadow>
                    <Grid ColumnDefinitions="3*,*">
                            <Label Text="Quiz Overview" TextColor="White" FontSize="20" VerticalOptions="Center"/>
                        <Button Grid.Column="1" Text="Add Question" HorizontalOptions="End" VerticalOptions="Center" BackgroundColor="#591c21" Command="{Binding AddQuestionCommand}"/>
                        </Grid>

                </Border>

                <Border Grid.Row="1" StrokeThickness="0" StrokeShape="RoundRectangle 20" BackgroundColor="#2e2e2e">
                    <Border.Shadow>
                        <Shadow Radius="2.5" Opacity="0.5" />
                    </Border.Shadow>
                    <Grid RowDefinitions="Auto,Auto" Padding="20" RowSpacing="25">
                            <Label Text="Questions" TextColor="White" FontSize="20"/>
                            <Border Grid.Row="1" StrokeThickness="0" StrokeShape="RoundRectangle 20" BackgroundColor="#1e1e1e">
                            <Border.Shadow>
                                <Shadow Radius="2.5" Opacity="0.5" />
                            </Border.Shadow>
                            <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="15" Padding="25,25">
                                    <HorizontalStackLayout Spacing="10" HorizontalOptions="End" VerticalOptions="Start">

                                        <Border WidthRequest="30" HeightRequest="35" StrokeShape="RoundRectangle 10" StrokeThickness="1" Stroke="White">
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer/>
                                            </Border.GestureRecognizers>
                                            <Border.Shadow>
                                                <Shadow Opacity="0" Radius="0"/>
                                            </Border.Shadow>
                                            <Image Source="pencil.png" WidthRequest="22" HeightRequest="22" HorizontalOptions="Center" VerticalOptions="Center">
                                                <Image.Behaviors>
                                                    <toolkit:IconTintColorBehavior TintColor="White" />
                                                </Image.Behaviors>
                                            </Image>
                                        </Border>
                                        <Border WidthRequest="30" HeightRequest="35" StrokeShape="RoundRectangle 10" StrokeThickness="1" Stroke="White">
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer/>
                                            </Border.GestureRecognizers>
                                            <Border.Shadow>
                                                <Shadow Opacity="0" Radius="0"/>
                                            </Border.Shadow>
                                            <Image Source="trash.png" WidthRequest="22" HeightRequest="22" HorizontalOptions="Center" VerticalOptions="Center">
                                                <Image.Behaviors>
                                                    <toolkit:IconTintColorBehavior TintColor="White" />
                                                </Image.Behaviors>
                                            </Image>
                                        </Border>
                                        
                                    </HorizontalStackLayout>
                                    <Label Text="Question 1" TextColor="White" FontSize="16" VerticalOptions="End"/>

                                    <Label Grid.Row="1" Text="Write a function that checks if a number is even or odd. Write a function that checks if a number is even or odd. Write a function that checks if a number is even or odd. Write a function that checks if a number is even or odd. Write a function that checks if a number is even or odd. Write a function that checks if a number is even or odd. Write a function that checks if a number is even or odd. Write a function that checks if a number is even or odd. Write a function that checks if a number is even or odd. " TextColor="White" FontSize="16"/>
                                    <Label Grid.Row="2" Text="Test Cases: 3" TextColor="White" FontSize="16"/>
                                </Grid>

                            </Border>
                        </Grid>


                </Border>
            </Grid>

        </Grid>



    </Grid>
</ContentPage>