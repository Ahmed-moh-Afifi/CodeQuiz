<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
             xmlns:rv="http://sharpnado.com"
             xmlns:vm="clr-namespace:CodeQuizDesktop.Viewmodels"
             xmlns:models="clr-namespace:CodeQuizDesktop.Models"
             xmlns:views="clr-namespace:CodeQuizDesktop.Views"
             x:Class="CodeQuizDesktop.Views.CreateQuiz"
             Title="CreateQuiz"
             x:DataType="vm:CreateQuizVM">

    <Grid RowDefinitions="Auto,*">
        <!-- Header -->
        <Border Grid.Row="0" StrokeThickness="0" BackgroundColor="{StaticResource BackgroundDark}" Padding="24,16">
            <Grid RowDefinitions="*,Auto">
                <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="16">
                    <Border Style="{StaticResource BackButton}">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ReturnCommand}"/>
                        </Border.GestureRecognizers>
                        <Image Source="arrow_back_ios_new_rounded.png" WidthRequest="18" HeightRequest="18" HorizontalOptions="Center" VerticalOptions="Center">
                            <Image.Behaviors>
                                <toolkit:IconTintColorBehavior TintColor="{StaticResource TextPrimary}"/>
                            </Image.Behaviors>
                        </Image>
                    </Border>
                    <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="4">
                        <Label Text="{Binding Header}" Style="{StaticResource PageTitle}" FontSize="26"/>
                        <Label Text="Configure your quiz settings and add questions" Style="{StaticResource CaptionText}" FontSize="15"/>
                    </VerticalStackLayout>
                    <Button Grid.Column="2" Text="Save and Publish" Style="{StaticResource PrimaryButton}" VerticalOptions="Center" Command="{Binding PublishCommand}"/>
                </Grid>
                <BoxView Grid.Row="1" HeightRequest="1" Color="{StaticResource BorderDefault}" VerticalOptions="End" Margin="0,16,0,0"/>
            </Grid>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" ColumnDefinitions="1.33*,2*" Padding="24" ColumnSpacing="24">
            <!-- Quiz Configuration Sidebar -->
            <Border Style="{StaticResource Card}">
                <ScrollView>
                    <VerticalStackLayout Spacing="24">
                        
                        <!-- Quiz Configuration Section -->
                        <VerticalStackLayout Spacing="12">
                            <Label Text="Quiz Configuration" Style="{StaticResource SectionHeader}" FontSize="20"/>
                            <Border Style="{StaticResource InnerCard}">
                                <VerticalStackLayout Spacing="16">
                                    <VerticalStackLayout Spacing="8">
                                        <Label Text="Quiz Title" Style="{StaticResource CaptionText}" FontSize="15"/>
                                        <Border Style="{StaticResource InputBorder}" StrokeShape="RoundRectangle 14">
                                            <Entry Text="{Binding QuizTitle}" Placeholder="Enter quiz title" FontSize="15"/>
                                        </Border>
                                    </VerticalStackLayout>
                                    <HorizontalStackLayout Spacing="4">
                                        <CheckBox IsChecked="{Binding AllowMultipleAttempts}" MinimumWidthRequest="0"/>
                                        <Label Text="Allow Multiple Attempts" Style="{StaticResource BodyText}" FontSize="15" VerticalOptions="Center"/>
                                    </HorizontalStackLayout>
                                </VerticalStackLayout>
                            </Border>
                        </VerticalStackLayout>

                        <!-- Quiz Timing Section -->
                        <VerticalStackLayout Spacing="12">
                            <Label Text="Quiz Timing" Style="{StaticResource SectionHeader}" FontSize="20"/>
                            <Border Style="{StaticResource InnerCard}">
                                <VerticalStackLayout Spacing="16">
                                    <VerticalStackLayout Spacing="8">
                                        <Label Text="Duration (minutes)" Style="{StaticResource CaptionText}" FontSize="15"/>
                                        <Border Style="{StaticResource InputBorder}" StrokeShape="RoundRectangle 14">
                                            <Grid>
                                                <Entry Text="{Binding QuizDurationInMinutes}" Placeholder="e.g. 60" FontSize="15"/>
                                                <Label Text="mins" Style="{StaticResource CaptionText}" FontSize="14" HorizontalOptions="End" VerticalOptions="Center" Margin="0,0,12,0"/>
                                            </Grid>
                                        </Border>
                                    </VerticalStackLayout>

                                    <BoxView HeightRequest="1" Color="{StaticResource BorderDefault}"/>
                                    <Label Text="Availability Window" Style="{StaticResource CaptionText}" FontSize="15" HorizontalOptions="Center"/>

                                    <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                                        <!-- From -->
                                        <VerticalStackLayout Spacing="8">
                                            <Label Text="From" Style="{StaticResource CaptionText}" FontSize="14"/>
                                            <Border Style="{StaticResource InnerCard}" BackgroundColor="{StaticResource SurfaceDark}">
                                                <VerticalStackLayout Spacing="12">
                                                    <VerticalStackLayout Spacing="4">
                                                        <Label Text="Date" Style="{StaticResource CaptionText}" FontSize="12"/>
                                                        <Border Style="{StaticResource InputBorder}" StrokeShape="RoundRectangle 12">
                                                            <DatePicker Date="{Binding AvailableFromDate}" HorizontalOptions="Center" FontSize="14"/>
                                                        </Border>
                                                    </VerticalStackLayout>
                                                    <VerticalStackLayout Spacing="4">
                                                        <Label Text="Time" Style="{StaticResource CaptionText}" FontSize="12"/>
                                                        <Border Style="{StaticResource InputBorder}" StrokeShape="RoundRectangle 12" Padding="0">
                                                            <TimePicker Time="{Binding AvailableFromTime}" FontSize="14"/>
                                                        </Border>
                                                    </VerticalStackLayout>
                                                </VerticalStackLayout>
                                            </Border>
                                        </VerticalStackLayout>
                                        <!-- To -->
                                        <VerticalStackLayout Spacing="8" Grid.Column="1">
                                            <Label Text="To" Style="{StaticResource CaptionText}" FontSize="14"/>
                                            <Border Style="{StaticResource InnerCard}" BackgroundColor="{StaticResource SurfaceDark}">
                                                <VerticalStackLayout Spacing="12">
                                                    <VerticalStackLayout Spacing="4">
                                                        <Label Text="Date" Style="{StaticResource CaptionText}" FontSize="12"/>
                                                        <Border Style="{StaticResource InputBorder}" StrokeShape="RoundRectangle 12">
                                                            <DatePicker Date="{Binding AvailableToDate}" HorizontalOptions="Center" FontSize="14"/>
                                                        </Border>
                                                    </VerticalStackLayout>
                                                    <VerticalStackLayout Spacing="4">
                                                        <Label Text="Time" Style="{StaticResource CaptionText}" FontSize="12"/>
                                                        <Border Style="{StaticResource InputBorder}" StrokeShape="RoundRectangle 12" Padding="0">
                                                            <TimePicker Time="{Binding AvailableToTime}" FontSize="14"/>
                                                        </Border>
                                                    </VerticalStackLayout>
                                                </VerticalStackLayout>
                                            </Border>
                                        </VerticalStackLayout>
                                    </Grid>
                                </VerticalStackLayout>
                            </Border>
                        </VerticalStackLayout>

                        <!-- Global Question Configuration -->
                        <VerticalStackLayout Spacing="12">
                            <Label Text="Editor Settings" Style="{StaticResource SectionHeader}" FontSize="20"/>
                            <Border Style="{StaticResource InnerCard}">
                                <VerticalStackLayout Spacing="16">
                                    <VerticalStackLayout Spacing="8">
                                        <Label Text="Programming Language" Style="{StaticResource CaptionText}" FontSize="15"/>
                                        <Border Style="{StaticResource InputBorder}" StrokeShape="RoundRectangle 14">
                                            <Picker ItemsSource="{Binding ProgrammingLanguages}" ItemDisplayBinding="{Binding Name}" SelectedItem="{Binding SelectedSupportedLanguage}" FontSize="15"/>
                                        </Border>
                                    </VerticalStackLayout>

                                    <VerticalStackLayout Spacing="8">
                                        <Label Text="Editor Options" Style="{StaticResource CaptionText}" FontSize="15"/>
                                        <Border Style="{StaticResource InnerCard}" BackgroundColor="{StaticResource SurfaceDark}">
                                            <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,*" RowSpacing="10">
                                                <HorizontalStackLayout Spacing="4">
                                                    <CheckBox IsChecked="{Binding AllowIntellisense}" MinimumWidthRequest="0"/>
                                                    <Label Text="IntelliSense" Style="{StaticResource BodyText}" FontSize="14" VerticalOptions="Center"/>
                                                </HorizontalStackLayout>
                                                <HorizontalStackLayout Grid.Column="1" Spacing="4">
                                                    <CheckBox IsChecked="{Binding AllowSignatureHelp}" MinimumWidthRequest="0"/>
                                                    <Label Text="Signature Help" Style="{StaticResource BodyText}" FontSize="14" VerticalOptions="Center"/>
                                                </HorizontalStackLayout>
                                                <HorizontalStackLayout Grid.Row="1" Spacing="4">
                                                    <CheckBox IsChecked="{Binding AllowExecution}" MinimumWidthRequest="0"/>
                                                    <Label Text="Run Code" Style="{StaticResource BodyText}" FontSize="14" VerticalOptions="Center"/>
                                                </HorizontalStackLayout>
                                                <HorizontalStackLayout Grid.Row="1" Grid.Column="1" Spacing="4" IsVisible="{Binding AllowExecution}">
                                                    <CheckBox IsChecked="{Binding ShowOutput}" MinimumWidthRequest="0"/>
                                                    <Label Text="Show Output" Style="{StaticResource BodyText}" FontSize="14" VerticalOptions="Center"/>
                                                </HorizontalStackLayout>
                                                <HorizontalStackLayout Grid.Row="2" Spacing="4" IsVisible="{Binding AllowExecution}">
                                                    <CheckBox IsChecked="{Binding ShowErrors}" MinimumWidthRequest="0"/>
                                                    <Label Text="Show Errors" Style="{StaticResource BodyText}" FontSize="14" VerticalOptions="Center"/>
                                                </HorizontalStackLayout>
                                            </Grid>
                                        </Border>
                                    </VerticalStackLayout>
                                </VerticalStackLayout>
                            </Border>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </ScrollView>
            </Border>

            <!-- Questions Section -->
            <Grid Grid.Column="1" RowDefinitions="Auto,*" RowSpacing="20">
                <!-- Questions Header -->
                <Border Style="{StaticResource Card}" Padding="20">
                    <Grid ColumnDefinitions="*,Auto">
                        <VerticalStackLayout Spacing="4">
                            <Label Text="Questions Overview" Style="{StaticResource SectionHeader}" FontSize="20"/>
                            <Label Text="{Binding QuestionModels.Count, StringFormat='{0} questions added'}" Style="{StaticResource CaptionText}" FontSize="15"/>
                        </VerticalStackLayout>
                        <Button Grid.Column="1" Text="Add Question" Style="{StaticResource PrimaryButton}" Command="{Binding AddQuestionCommand}" IsVisible="{Binding IsCreatingNew}"/>
                    </Grid>
                </Border>

                <!-- Questions List -->
                <Border Grid.Row="1" Style="{StaticResource Card}" Padding="0">
                    <ScrollView>
                        <Grid Padding="20">
                            <CollectionView ItemsSource="{Binding QuestionModels}" SelectionMode="None">
                                <CollectionView.ItemsLayout>
                                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="16"/>
                                </CollectionView.ItemsLayout>
                                <CollectionView.EmptyView>
                                    <Border Style="{StaticResource InnerCard}" Padding="40">
                                        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="8">
                                            <Label Text="No questions added yet" Style="{StaticResource BodyText}" FontSize="18" HorizontalOptions="Center" TextColor="{StaticResource TextMuted}"/>
                                            <Label Text="Click 'Add Question' to get started" Style="{StaticResource CaptionText}" FontSize="15" HorizontalOptions="Center"/>
                                        </VerticalStackLayout>
                                    </Border>
                                </CollectionView.EmptyView>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate x:DataType="models:NewQuestionModel">
                                        <Border Style="{StaticResource InnerCard}">
                                            <Grid RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="12">
                                                <!-- Question Header -->
                                                <Grid ColumnDefinitions="*,Auto">
                                                    <HorizontalStackLayout Spacing="12">
                                                        <Label Text="{Binding Order, StringFormat='Question {0}'}" Style="{StaticResource ItemTitle}" FontSize="16" VerticalOptions="Center"/>
                                                        <Border Style="{StaticResource StatusBadge}" StrokeShape="RoundRectangle 10">
                                                            <Label Text="{Binding Points, StringFormat='{0} pts'}" Style="{StaticResource BadgeText}" FontSize="13"/>
                                                        </Border>
                                                    </HorizontalStackLayout>
                                                    <HorizontalStackLayout Grid.Column="1" Spacing="10" IsVisible="{Binding Source={RelativeSource AncestorType={x:Type vm:CreateQuizVM}}, Path=IsCreatingNew}">
                                                        <Border Style="{StaticResource OutlinedIconButton}" StrokeShape="RoundRectangle 12">
                                                            <Border.GestureRecognizers>
                                                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CreateQuizVM}}, Path=EditQuestionCommand}" CommandParameter="{Binding .}"/>
                                                            </Border.GestureRecognizers>
                                                            <Image Source="pencil.png" WidthRequest="18" HeightRequest="18" HorizontalOptions="Center" VerticalOptions="Center">
                                                                <Image.Behaviors>
                                                                    <toolkit:IconTintColorBehavior TintColor="{StaticResource Primary}"/>
                                                                </Image.Behaviors>
                                                            </Image>
                                                        </Border>
                                                        <Border Style="{StaticResource DangerIconButton}" StrokeShape="RoundRectangle 12">
                                                            <Border.GestureRecognizers>
                                                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CreateQuizVM}}, Path=DeleteQuestionCommand}" CommandParameter="{Binding .}"/>
                                                            </Border.GestureRecognizers>
                                                            <Image Source="trash.png" WidthRequest="18" HeightRequest="18" HorizontalOptions="Center" VerticalOptions="Center">
                                                                <Image.Behaviors>
                                                                    <toolkit:IconTintColorBehavior TintColor="{StaticResource Error}"/>
                                                                </Image.Behaviors>
                                                            </Image>
                                                        </Border>
                                                    </HorizontalStackLayout>
                                                </Grid>

                                                <!-- Statement -->
                                                <Label Grid.Row="1" Text="{Binding Statement}" Style="{StaticResource BodyText}" FontSize="15" LineBreakMode="WordWrap" MaxLines="3"/>

                                                <!-- Test Cases Count -->
                                                <Label Grid.Row="2" Text="{Binding TestCases.Count, StringFormat='Test Cases: {0}'}" Style="{StaticResource CaptionText}" FontSize="14"/>

                                                <!-- Code Preview -->
                                                <Border Grid.Row="3" Style="{StaticResource InnerCard}" BackgroundColor="{StaticResource SurfaceDark}" Padding="12" StrokeShape="RoundRectangle 12">
                                                    <Label Text="{Binding EditorCode}" Style="{StaticResource CodeLabel}" FontSize="13" LineBreakMode="WordWrap" MaxLines="4"/>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </Grid>
                    </ScrollView>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</ContentPage>