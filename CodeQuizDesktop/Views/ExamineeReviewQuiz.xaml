<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
             xmlns:models="clr-namespace:CodeQuizDesktop.Models"
             xmlns:vm="clr-namespace:CodeQuizDesktop.Viewmodels"
             xmlns:controls="clr-namespace:CodeQuizDesktop.Controls"
             x:Class="CodeQuizDesktop.Views.ExamineeReviewQuiz"
             Title="ExamineeReviewQuiz"
             x:DataType="vm:ExamineeReviewQuizVM">

    <Grid RowDefinitions="Auto,*">
        <!-- Header -->
        <Border StrokeThickness="0" BackgroundColor="{StaticResource BackgroundDark}" Padding="24,16">
            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="16">
                <Border Style="{StaticResource BackButton}">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ReturnCommand}"/>
                    </Border.GestureRecognizers>
                    <Image Source="arrow_back_ios_new_rounded.png" WidthRequest="18" HeightRequest="18" HorizontalOptions="Center" VerticalOptions="Center">
                        <Image.Behaviors>
                            <toolkit:IconTintColorBehavior TintColor="{StaticResource TextPrimary}"/>
                        </Image.Behaviors>
                    </Image>
                </Border>
                <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="4">
                    <Label Text="{Binding Attempt.Quiz.Title}" Style="{StaticResource PageTitle}" FontSize="24"/>
                    <Label Text="Review your submission" Style="{StaticResource CaptionText}"/>
                </VerticalStackLayout>
            </Grid>
        </Border>
        <BoxView HeightRequest="1" Color="{StaticResource BorderDefault}" VerticalOptions="End"/>

        <!-- Content -->
        <Grid Grid.Row="1" ColumnDefinitions="1*,4.3*">
            <!-- Sidebar -->
            <Border StrokeThickness="0" BackgroundColor="{StaticResource BackgroundDark}">
                <Grid RowDefinitions="Auto,Auto">
                    <VerticalStackLayout Padding="24" Spacing="20">
                        <Label Text="Questions" Style="{StaticResource SectionHeader}" FontSize="16"/>

                        <FlexLayout Direction="Row" Wrap="Wrap" JustifyContent="Start" AlignItems="Center" AlignContent="Start" BindableLayout.ItemsSource="{Binding Attempt.Quiz.Questions}">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate x:DataType="models:Question">
                                    <Border StrokeShape="RoundRectangle 8" BackgroundColor="{StaticResource SurfaceDark}" Padding="18,14" Stroke="{StaticResource BorderDefault}" StrokeThickness="1" Margin="3">
                                        <Border.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ExamineeReviewQuizVM}}, Path=SpecificQuestionCommand}" CommandParameter="{Binding .}"/>
                                        </Border.GestureRecognizers>
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup x:Name="CommonStates">
                                                <VisualState x:Name="Normal"/>
                                                <VisualState x:Name="PointerOver">
                                                    <VisualState.Setters>
                                                        <Setter Property="BackgroundColor" Value="{StaticResource Secondary}"/>
                                                    </VisualState.Setters>
                                                </VisualState>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>
                                        <Label Text="{Binding Order}" FontSize="16" FontAttributes="Bold"/>
                                    </Border>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </FlexLayout>

                        <ProgressBar Progress="0"/>
                    </VerticalStackLayout>

                    <!-- Navigation Buttons -->
                    <Grid Grid.Row="1" ColumnDefinitions="*,*" ColumnSpacing="12" Padding="24,16">
                        <Button Text="Previous" Style="{StaticResource SecondaryButton}" Command="{Binding PreviousQuestionCommand}" ImageSource="arrow_back_ios_new_rounded.png" HeightRequest="40">
                            <Button.Behaviors>
                                <toolkit:IconTintColorBehavior TintColor="White"/>
                            </Button.Behaviors>
                        </Button>
                        <Button Grid.Column="1" Text="Next" Style="{StaticResource PrimaryButton}" Command="{Binding NextQuestionCommand}" ImageSource="arrow_forward_ios_rounded.png" HeightRequest="40">
                            <Button.Behaviors>
                                <toolkit:IconTintColorBehavior TintColor="White"/>
                            </Button.Behaviors>
                        </Button>
                    </Grid>
                </Grid>
            </Border>

            <BoxView WidthRequest="1" Color="{StaticResource SurfaceDark}" HorizontalOptions="End"/>

            <!-- Main Content -->
            <ScrollView Grid.Column="1">
                <VerticalStackLayout>
                    <!-- Question Header -->
                    <Border BackgroundColor="{StaticResource SurfaceDark}" Padding="24,20" StrokeThickness="0">
                        <Grid ColumnDefinitions="*,Auto">
                            <Label Text="{Binding SelectedQuestion.Order, StringFormat='Question {0}'}" Style="{StaticResource SectionHeader}"/>
                            <Border Grid.Column="1" Style="{StaticResource StatusBadge}" BackgroundColor="{StaticResource BackgroundDark}">
                                <HorizontalStackLayout Spacing="4">
                                    <Label Text="Grade:" Style="{StaticResource CaptionText}"/>
                                    <Label Text="{Binding Grade}" Style="{StaticResource ScoreText}"/>
                                    <Label Text=" / " Style="{StaticResource CaptionText}"/>
                                    <Label Text="{Binding SelectedQuestion.Points}" Style="{StaticResource CaptionText}"/>
                                </HorizontalStackLayout>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Question Content -->
                    <VerticalStackLayout Spacing="32" Padding="24">
                        <Label Text="{Binding SelectedQuestion.Statement}" Style="{StaticResource BodyText}" FontSize="16" LineBreakMode="WordWrap"/>

                        <!-- Test Cases -->
                        <VerticalStackLayout Spacing="16" IsVisible="{Binding HasTestCases}">
                            <Label Text="Examples" Style="{StaticResource SectionHeader}" FontSize="16"/>
                            <CollectionView ItemsSource="{Binding SelectedQuestion.TestCases}">
                                <CollectionView.ItemsLayout>
                                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="12"/>
                                </CollectionView.ItemsLayout>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate x:DataType="models:TestCase">
                                        <Border Style="{StaticResource InnerCard}">
                                            <Grid RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="12">
                                                <Label Text="Input" Style="{StaticResource CaptionText}" FontAttributes="Bold"/>
                                                <Border Grid.Row="1" Style="{StaticResource InnerCard}" BackgroundColor="{StaticResource SurfaceDark}" MinimumHeightRequest="30" MaximumHeightRequest="150">
                                                    <ScrollView>
                                                        <Label Text="{Binding InputInOneString}" Style="{StaticResource CodeLabel}"/>
                                                    </ScrollView>
                                                </Border>
                                                <Label Grid.Row="2" Text="Expected Output" Style="{StaticResource CaptionText}" FontAttributes="Bold"/>
                                                <Border Grid.Row="3" Style="{StaticResource InnerCard}" BackgroundColor="{StaticResource SurfaceDark}" MinimumHeightRequest="30" MaximumHeightRequest="150">
                                                    <ScrollView>
                                                        <Label Text="{Binding ExpectedOutput}" Style="{StaticResource CodeLabel}"/>
                                                    </ScrollView>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </VerticalStackLayout>
                        
                        <!-- Test Case Results (Partial Credit Breakdown) -->
                        <Border Style="{StaticResource InnerCard}" IsVisible="{Binding HasEvaluationResults}" Padding="16">
                            <VerticalStackLayout Spacing="12">
                                <Grid ColumnDefinitions="*,Auto">
                                    <Label Text="Test Results" Style="{StaticResource SectionHeader}" FontSize="16"/>
                                    <Border Grid.Column="1" StrokeShape="RoundRectangle 12" BackgroundColor="{StaticResource Primary}" Padding="12,6" StrokeThickness="0">
                                        <Label Text="{Binding PassedTestCasesText}" FontSize="13" TextColor="White" FontAttributes="Bold"/>
                                    </Border>
                                </Grid>
                                
                                <CollectionView ItemsSource="{Binding CurrentSolution.EvaluationResults}">
                                    <CollectionView.ItemsLayout>
                                        <LinearItemsLayout Orientation="Vertical" ItemSpacing="8"/>
                                    </CollectionView.ItemsLayout>
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate x:DataType="models:EvaluationResult">
                                            <Border StrokeShape="RoundRectangle 8" Padding="12" StrokeThickness="1" Stroke="{StaticResource BorderDefault}">
                                                <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                                                    <!-- Pass/Fail Icon -->
                                                    <Border StrokeShape="RoundRectangle 4" WidthRequest="28" HeightRequest="28" StrokeThickness="0">
                                                        <Border.Style>
                                                            <Style TargetType="Border">
                                                                <Style.Triggers>
                                                                    <DataTrigger TargetType="Border" Binding="{Binding IsSuccessful}" Value="True">
                                                                        <Setter Property="BackgroundColor" Value="#22C55E"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger TargetType="Border" Binding="{Binding IsSuccessful}" Value="False">
                                                                        <Setter Property="BackgroundColor" Value="#EF4444"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                        <Label Text="{Binding IsSuccessful, Converter={StaticResource BoolToPassFailConverter}}" 
                                                               HorizontalOptions="Center" 
                                                               VerticalOptions="Center" 
                                                               TextColor="White" 
                                                               FontSize="14"/>
                                                    </Border>
                                                    
                                                    <!-- Test Case Description -->
                                                    <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                                                        <Label Text="{Binding TestCase.TestCaseNumber, StringFormat='Test Case {0}'}" 
                                                               Style="{StaticResource BodyText}" 
                                                               FontSize="13"/>
                                                    </VerticalStackLayout>
                                                    
                                                    <!-- Status Text -->
                                                    <Label Grid.Column="2" 
                                                           VerticalOptions="Center"
                                                           FontSize="12">
                                                        <Label.Style>
                                                            <Style TargetType="Label">
                                                                <Style.Triggers>
                                                                    <DataTrigger TargetType="Label" Binding="{Binding IsSuccessful}" Value="True">
                                                                        <Setter Property="Text" Value="Passed"/>
                                                                        <Setter Property="TextColor" Value="#22C55E"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger TargetType="Label" Binding="{Binding IsSuccessful}" Value="False">
                                                                        <Setter Property="Text" Value="Failed"/>
                                                                        <Setter Property="TextColor" Value="#EF4444"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Label.Style>
                                                    </Label>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>
                            </VerticalStackLayout>
                        </Border>
                        
                        <!-- AI Feedback Panel (only if instructor enabled) -->
                        <Border Style="{StaticResource InnerCard}" IsVisible="{Binding HasAiAssessment}" Padding="20">
                            <VerticalStackLayout Spacing="16">
                                <!-- AI Feedback Header -->
                                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                                    <Border StrokeShape="RoundRectangle 8" 
                                            BackgroundColor="{Binding CurrentSolution.AiAssessment.IsValid, Converter={StaticResource AiValidityToColorConverter}}" 
                                            Padding="12,6" 
                                            StrokeThickness="0">
                                        <Label Text="{Binding AiValidityText}" 
                                               FontSize="14" 
                                               FontAttributes="Bold" 
                                               TextColor="White"/>
                                    </Border>
                                    <Label Grid.Column="1" 
                                           Text="AI Feedback" 
                                           Style="{StaticResource SectionHeader}" 
                                           FontSize="16" 
                                           VerticalOptions="Center"/>
                                </Grid>
                                
                                <!-- AI Reasoning -->
                                <VerticalStackLayout Spacing="8">
                                    <Label Text="Feedback" Style="{StaticResource CaptionText}" FontAttributes="Bold"/>
                                    <Border Style="{StaticResource InnerCard}" BackgroundColor="{StaticResource SurfaceDark}" Padding="12">
                                        <Label Text="{Binding CurrentSolution.AiAssessment.Reasoning}" 
                                               Style="{StaticResource BodyText}" 
                                               FontSize="14" 
                                               LineBreakMode="WordWrap"/>
                                    </Border>
                                </VerticalStackLayout>
                            </VerticalStackLayout>
                        </Border>
                        
                        <!-- Instructor Feedback (only if feedback exists) -->
                        <Border Style="{StaticResource InnerCard}" IsVisible="{Binding HasInstructorFeedback}" Padding="20">
                            <VerticalStackLayout Spacing="12">
                                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                                    <Image Source="pencil.png" WidthRequest="20" HeightRequest="20" VerticalOptions="Center">
                                        <Image.Behaviors>
                                            <toolkit:IconTintColorBehavior TintColor="{StaticResource Primary}"/>
                                        </Image.Behaviors>
                                    </Image>
                                    <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                                        <Label Text="Instructor Feedback" 
                                               Style="{StaticResource SectionHeader}" 
                                               FontSize="16"/>
                                        <Label Text="{Binding InstructorFeedbackAuthor, StringFormat='by {0}'}" 
                                               Style="{StaticResource CaptionText}" 
                                               FontSize="12"/>
                                    </VerticalStackLayout>
                                </Grid>
                                <Border Style="{StaticResource InnerCard}" BackgroundColor="{StaticResource SurfaceDark}" Padding="12">
                                    <Label Text="{Binding CurrentSolution.Feedback}" 
                                           Style="{StaticResource BodyText}" 
                                           FontSize="14" 
                                           LineBreakMode="WordWrap"/>
                                </Border>
                            </VerticalStackLayout>
                        </Border>
                    </VerticalStackLayout>

                    <!-- Code Editor -->
                    <controls:CodeEditor 
                        ShowError="True"
                        ShowOutput="True"
                        AllowExecution="True" 
                        EditorType="ReadOnly"
                        Language="{Binding SelectedQuestion.QuestionConfiguration.Language}"
                        Code="{Binding CodeInEditor}"
                        HeightRequest="800"/>
                </VerticalStackLayout>
            </ScrollView>
        </Grid>
    </Grid>
</ContentPage>