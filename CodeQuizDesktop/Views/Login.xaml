<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:rv="http://sharpnado.com"
             x:Class="CodeQuizDesktop.Views.Login"
             Title="Login">
    
    <Grid RowDefinitions="*,Auto,*" ColumnDefinitions="1.5*,*,1.5*">

        <!-- Background Decorative Text -->
        <Label Margin="160,60" Grid.Row="1" Grid.ColumnSpan="3" VerticalOptions="Start" HorizontalOptions="Start" FontSize="56" Opacity="0.4">
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="Roses are " TextColor="{StaticResource TextMuted}" FontFamily="InterExtraBold"/>
                    <Span Text="red" TextColor="{StaticResource Primary}" FontFamily="InterExtraBold"/>
                </FormattedString>
            </Label.FormattedText>
        </Label>
        
        <Label Margin="100,100" Grid.Row="1" Grid.ColumnSpan="3" VerticalOptions="End" HorizontalOptions="End" FontSize="56" Opacity="0.4">
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="Violets are " TextColor="{StaticResource TextMuted}" FontFamily="InterExtraBold"/>
                    <Span Text="blue" TextColor="{StaticResource Info}" FontFamily="InterExtraBold"/>
                </FormattedString>
            </Label.FormattedText>
        </Label>
        
        <Label Grid.Row="2" Grid.ColumnSpan="3" Text="Unexpected &quot;{&quot; on line 32" VerticalOptions="Center" HorizontalOptions="Center" FontFamily="InterExtraBold" FontSize="56" TextColor="{StaticResource Warning}" Opacity="0.4"/>

        <!-- Login Card -->
        <Border Grid.Row="1" Grid.Column="1" Stroke="{StaticResource BorderDefault}" StrokeThickness="1" StrokeShape="RoundRectangle 16">
            <Border.Shadow>
                <Shadow Brush="#000000" Opacity="0.3" Radius="24" Offset="0,8"/>
            </Border.Shadow>

            <rv:MaterialFrame MaterialBlurStyle="Dark" MaterialTheme="AcrylicBlur" CornerRadius="16">
                <VerticalStackLayout Padding="32" Spacing="24">
                    <Label Text="Can you fix it?" HorizontalOptions="Center" Style="{StaticResource CardTitle}"/>
                    
                    <VerticalStackLayout Spacing="16" Padding="8">
                        <Label Text="{}{" FontFamily="SFMonoRegular" FontSize="18" TextColor="{StaticResource TextMuted}"/>
                        
                        <VerticalStackLayout Padding="24,0" Spacing="16">
                            <!-- Username Field -->
                            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="8">
                                <Label Text="&quot;username&quot;:" FontFamily="SFMonoRegular" FontSize="16" TextColor="{StaticResource CodeKeyword}" VerticalOptions="Center"/>
                                <Border Grid.Column="1" Style="{StaticResource InputBorder}">
                                    <Entry Placeholder="&quot;adalovelace&quot;" Style="{StaticResource CodeInput}" Text="{Binding Username}" VerticalTextAlignment="Center"/>
                                </Border>
                                <Label Grid.Column="2" Text="," FontFamily="SFMonoRegular" FontSize="16" TextColor="{StaticResource TextMuted}" VerticalOptions="Center"/>
                            </Grid>
                            
                            <!-- Password Field -->
                            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="8">
                                <Label Text="&quot;password&quot;:" FontFamily="SFMonoRegular" FontSize="16" TextColor="{StaticResource CodeKeyword}" VerticalOptions="Center"/>
                                <Border Grid.Column="1" Style="{StaticResource InputBorder}">
                                    <Entry Placeholder="&quot;***********&quot;" Style="{StaticResource CodeInput}" IsPassword="True" Text="{Binding Password}" VerticalTextAlignment="Center"/>
                                </Border>
                                <Label Grid.Column="2" Text="," FontFamily="SFMonoRegular" FontSize="16" TextColor="{StaticResource TextMuted}" VerticalOptions="Center"/>
                            </Grid>
                        </VerticalStackLayout>
                        
                        <Label Text="{}}" FontFamily="SFMonoRegular" FontSize="18" TextColor="{StaticResource TextMuted}"/>
                    </VerticalStackLayout>
                    
                    <!-- Forgot Password Link -->
                    <Button Text="Forgot password?" Style="{StaticResource GhostButton}" FontFamily="InterRegular" FontSize="14" HorizontalOptions="End" Command="{Binding ForgotPassCommand}"/>
                    
                    <!-- Login Button -->
                    <Button Text="Log in" Style="{StaticResource PrimaryButton}" HorizontalOptions="FillAndExpand" FontFamily="InterBlack" FontSize="18" Command="{Binding LoginCommand}">
                        <Button.Shadow>
                            <Shadow Brush="{StaticResource Primary}" Opacity="0.4" Radius="12" Offset="0,4"/>
                        </Button.Shadow>
                    </Button>
                    
                    <!-- Register Link -->
                    <Button Text="Don't have an account? Register" Style="{StaticResource GhostButton}" FontFamily="InterRegular" HorizontalOptions="Center" Command="{Binding OpenRegisterPageCommand}"/>
                </VerticalStackLayout>
            </rv:MaterialFrame>
        </Border>
    </Grid>
</ContentPage>