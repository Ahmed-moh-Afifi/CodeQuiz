<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.Maui;assembly=LiveChartsCore.SkiaSharpView.Maui"
             xmlns:models="clr-namespace:CodeQuizDesktop.Models"
             xmlns:vm="clr-namespace:CodeQuizDesktop.Viewmodels"
             x:Class="CodeQuizDesktop.Views.ExaminerViewQuiz"
             Title="ExaminerViewQuiz"
             x:DataType="vm:ExaminerViewQuizVM">

    <Grid RowDefinitions="Auto,*">
        <!-- Header -->
        <Border StrokeThickness="0" BackgroundColor="{StaticResource BackgroundDark}" Padding="24,16">
            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="16">
                <Border Style="{StaticResource BackButton}">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ReturnCommand}"/>
                    </Border.GestureRecognizers>
                    <Image Source="arrow_back_ios_new_rounded.png" WidthRequest="18" HeightRequest="18" HorizontalOptions="Center" VerticalOptions="Center">
                        <Image.Behaviors>
                            <toolkit:IconTintColorBehavior TintColor="{StaticResource TextPrimary}"/>
                        </Image.Behaviors>
                    </Image>
                </Border>
                <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="4">
                    <Label Text="{Binding Quiz.Title}" Style="{StaticResource PageTitle}" FontSize="24"/>
                    <Label Text="View and grade submissions" Style="{StaticResource CaptionText}"/>
                </VerticalStackLayout>
                
                <!-- Toggle Statistics Panel Button -->
                <Border Grid.Column="2" Style="{StaticResource IconButton}">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ToggleStatisticsPanelCommand}"/>
                    </Border.GestureRecognizers>
                    <Image Source="sidepane.png" WidthRequest="20" HeightRequest="20" HorizontalOptions="Center" VerticalOptions="Center">
                        <Image.Behaviors>
                            <toolkit:IconTintColorBehavior TintColor="{StaticResource TextPrimary}"/>
                        </Image.Behaviors>
                    </Image>
                </Border>
            </Grid>
        </Border>

        <BoxView HeightRequest="1" Color="{StaticResource BorderDefault}" VerticalOptions="End"/>

        <!-- Content -->
        <Grid Grid.Row="1" ColumnDefinitions="Auto,*" Padding="24" ColumnSpacing="24">

            <!-- Statistics Sidebar -->
            <Border Grid.Column="0" 
                    Style="{StaticResource Card}" 
                    IsVisible="{Binding IsStatisticsPanelVisible}"
                    WidthRequest="320"
                    Padding="0">
                <Border.Shadow>
                    <Shadow Brush="#000000" Opacity="0.15" Radius="12" Offset="0,4"/>
                </Border.Shadow>

                <ScrollView>
                    <VerticalStackLayout Spacing="0">
                        <!-- Statistics Header -->
                        <Grid BackgroundColor="{StaticResource BackgroundDark}" Padding="20,16">
                            <HorizontalStackLayout Spacing="12">
                                <Image Source="stats.png" WidthRequest="20" HeightRequest="20" VerticalOptions="Center">
                                    <Image.Behaviors>
                                        <toolkit:IconTintColorBehavior TintColor="{StaticResource Primary}"/>
                                    </Image.Behaviors>
                                </Image>
                                <Label Text="Statistics" Style="{StaticResource SectionHeader}" FontSize="18" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </Grid>
                        
                        <BoxView HeightRequest="1" Color="{StaticResource BorderDefault}"/>

                        <!-- Quick Stats Grid -->
                        <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" Padding="16" ColumnSpacing="12" RowSpacing="12">
                            <!-- Total Submissions -->
                            <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource InnerCard}" Padding="16">
                                <VerticalStackLayout Spacing="4">
                                    <Label Text="{Binding Statistics.TotalAttempts}" 
                                           FontSize="28" 
                                           FontAttributes="Bold" 
                                           TextColor="{StaticResource TextPrimary}"/>
                                    <Label Text="Total" Style="{StaticResource CaptionText}"/>
                                </VerticalStackLayout>
                            </Border>
                            
                            <!-- Submitted -->
                            <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource InnerCard}" Padding="16">
                                <VerticalStackLayout Spacing="4">
                                    <Label Text="{Binding Statistics.SubmittedAttempts}" 
                                           FontSize="28" 
                                           FontAttributes="Bold" 
                                           TextColor="{StaticResource Success}"/>
                                    <Label Text="Submitted" Style="{StaticResource CaptionText}"/>
                                </VerticalStackLayout>
                            </Border>
                            
                            <!-- Average Grade -->
                            <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource InnerCard}" Padding="16">
                                <VerticalStackLayout Spacing="4">
                                    <Label Text="{Binding Statistics.AverageGrade, StringFormat='{0:F1}'}" 
                                           FontSize="28" 
                                           FontAttributes="Bold" 
                                           TextColor="{StaticResource Warning}"/>
                                    <Label Text="Average" Style="{StaticResource CaptionText}"/>
                                </VerticalStackLayout>
                            </Border>
                            
                            <!-- Pass Rate -->
                            <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource InnerCard}" Padding="16">
                                <VerticalStackLayout Spacing="4">
                                    <Label Text="{Binding Statistics.PassRate, StringFormat='{0:F0}%'}" 
                                           FontSize="28" 
                                           FontAttributes="Bold" 
                                           TextColor="{StaticResource SuccessLight}"/>
                                    <Label Text="Pass Rate" Style="{StaticResource CaptionText}"/>
                                </VerticalStackLayout>
                            </Border>
                        </Grid>

                        <BoxView HeightRequest="1" Color="{StaticResource BorderDefault}" Margin="16,0"/>

                        <!-- Detailed Stats -->
                        <VerticalStackLayout Padding="16" Spacing="12">
                            <Label Text="Grade Details" FontAttributes="Bold" TextColor="{StaticResource TextPrimary}" FontSize="14"/>
                            
                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="10">
                                <Label Grid.Row="0" Text="Highest" Style="{StaticResource BodyText}"/>
                                <Label Grid.Row="0" Grid.Column="1" 
                                       Text="{Binding Statistics.HighestGrade, StringFormat='{0:F1}'}" 
                                       Style="{StaticResource SuccessText}"/>
                                
                                <Label Grid.Row="1" Text="Lowest" Style="{StaticResource BodyText}"/>
                                <Label Grid.Row="1" Grid.Column="1" 
                                       Text="{Binding Statistics.LowestGrade, StringFormat='{0:F1}'}" 
                                       TextColor="{StaticResource ErrorLight}" 
                                       FontAttributes="Bold"/>
                                
                                <Label Grid.Row="2" Text="Median" Style="{StaticResource BodyText}"/>
                                <Label Grid.Row="2" Grid.Column="1" 
                                       Text="{Binding Statistics.MedianGrade, StringFormat='{0:F1}'}" 
                                       TextColor="{StaticResource TextPrimary}" 
                                       FontAttributes="Bold"/>
                                
                                <Label Grid.Row="3" Text="Std. Deviation" Style="{StaticResource BodyText}"/>
                                <Label Grid.Row="3" Grid.Column="1" 
                                       Text="{Binding Statistics.StandardDeviation, StringFormat='{0:F2}'}" 
                                       TextColor="{StaticResource TextSecondary}" 
                                       FontAttributes="Bold"/>
                            </Grid>
                        </VerticalStackLayout>

                        <BoxView HeightRequest="1" Color="{StaticResource BorderDefault}" Margin="16,0"/>

                        <!-- Grade Distribution Chart -->
                        <VerticalStackLayout Padding="16" Spacing="12">
                            <HorizontalStackLayout Spacing="8">
                                <Label Text="Grading Curve" FontAttributes="Bold" TextColor="{StaticResource TextPrimary}" FontSize="14"/>
                                <Label Text="vs Normal Distribution" Style="{StaticResource CaptionText}" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                            
                            <!-- Chart Container - visibility controlled to avoid disposal issues -->
                            <ContentView x:Name="chartContainer" HeightRequest="200" IsVisible="{Binding IsChartVisible}">
                                <lvc:CartesianChart 
                                    x:Name="gradeChart"
                                    Series="{Binding GradeCurveSeries}"
                                    XAxes="{Binding XAxes}"
                                    YAxes="{Binding YAxes}"
                                    HeightRequest="200"
                                    BackgroundColor="Transparent">
                                </lvc:CartesianChart>
                            </ContentView>
                            
                            <!-- Empty state when no chart data -->
                            <Border HeightRequest="200" 
                                    BackgroundColor="{StaticResource BackgroundDark}" 
                                    StrokeShape="RoundRectangle 8"
                                    StrokeThickness="0"
                                    IsVisible="{Binding IsChartVisible, Converter={StaticResource InverseBoolConverter}}">
                                <Label Text="No grade data available yet" 
                                       TextColor="{StaticResource TextMuted}" 
                                       HorizontalOptions="Center" 
                                       VerticalOptions="Center"/>
                            </Border>
                            
                            <!-- Legend -->
                            <HorizontalStackLayout Spacing="16" HorizontalOptions="Center" IsVisible="{Binding IsChartVisible}">
                                <HorizontalStackLayout Spacing="6">
                                    <BoxView WidthRequest="12" HeightRequest="12" Color="{StaticResource Primary}" CornerRadius="2"/>
                                    <Label Text="Actual" Style="{StaticResource CaptionText}"/>
                                </HorizontalStackLayout>
                                <HorizontalStackLayout Spacing="6">
                                    <BoxView WidthRequest="12" HeightRequest="3" Color="{StaticResource Success}" VerticalOptions="Center"/>
                                    <Label Text="Normal Curve" Style="{StaticResource CaptionText}"/>
                                </HorizontalStackLayout>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                        
                        <!-- AI Assessment Stats Section -->
                        <VerticalStackLayout Padding="16" Spacing="12" IsVisible="{Binding Statistics.TotalAiAssessments, Converter={StaticResource GreaterThanZeroConverter}, FallbackValue=False}">
                            <BoxView HeightRequest="1" Color="{StaticResource BorderDefault}" Margin="0,0,0,4"/>
                            
                            <HorizontalStackLayout Spacing="8">
                                <Image Source="smart_toy.png" WidthRequest="16" HeightRequest="16" VerticalOptions="Center">
                                    <Image.Behaviors>
                                        <toolkit:IconTintColorBehavior TintColor="{StaticResource Primary}"/>
                                    </Image.Behaviors>
                                </Image>
                                <Label Text="AI Assessment" FontAttributes="Bold" TextColor="{StaticResource TextPrimary}" FontSize="14"/>
                            </HorizontalStackLayout>
                            
                            <!-- AI Stats Grid - Clickable for filtering -->
                            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" RowSpacing="12" ColumnSpacing="12">
                                <!-- Assessed Solutions - Clickable -->
                                <Border Style="{StaticResource InnerCard}" Padding="12">
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding FilterByAiAssessedCommand}"/>
                                    </Border.GestureRecognizers>
                                    <VerticalStackLayout Spacing="2">
                                        <Label Text="{Binding Statistics.TotalAiAssessments}" 
                                               FontSize="20" 
                                               FontAttributes="Bold" 
                                               TextColor="{StaticResource Primary}"/>
                                        <HorizontalStackLayout Spacing="4">
                                            <Label Text="AI Assessed" Style="{StaticResource CaptionText}" FontSize="11"/>
                                            <Label Text="(tap to filter)" Style="{StaticResource CaptionText}" FontSize="9" TextColor="{StaticResource TextDisabled}"/>
                                        </HorizontalStackLayout>
                                    </VerticalStackLayout>
                                </Border>
                                
                                <!-- Flagged Solutions - Clickable -->
                                <Border Grid.Column="1" Style="{StaticResource InnerCard}" Padding="12">
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding FilterByFlaggedCommand}"/>
                                    </Border.GestureRecognizers>
                                    <VerticalStackLayout Spacing="2">
                                        <HorizontalStackLayout Spacing="4">
                                            <Label Text="{Binding Statistics.FlaggedSolutions}" 
                                                   FontSize="20" 
                                                   FontAttributes="Bold" 
                                                   TextColor="#EF4444"/>
                                            <Label Text="{Binding Statistics.FlaggedPercentage, StringFormat='({0:F0}%)'}" 
                                                   FontSize="12" 
                                                   TextColor="#EF4444"
                                                   VerticalOptions="End"
                                                   Margin="0,0,0,2"/>
                                        </HorizontalStackLayout>
                                        <HorizontalStackLayout Spacing="4">
                                            <Image Source="flag.png" WidthRequest="11" HeightRequest="11" VerticalOptions="Center">
                                                <Image.Behaviors>
                                                    <toolkit:IconTintColorBehavior TintColor="#EF4444"/>
                                                </Image.Behaviors>
                                            </Image>
                                            <Label Text="Flagged" Style="{StaticResource CaptionText}" FontSize="11"/>
                                            <Label Text="(tap to filter)" Style="{StaticResource CaptionText}" FontSize="9" TextColor="{StaticResource TextDisabled}"/>
                                        </HorizontalStackLayout>
                                    </VerticalStackLayout>
                                </Border>
                            </Grid>
                            
                            <!-- Common Flags - Clickable for filtering -->
                            <VerticalStackLayout Spacing="8" IsVisible="{Binding Statistics.CommonFlags.Count, Converter={StaticResource GreaterThanZeroConverter}, FallbackValue=False}">
                                <Label Text="Common Flags (tap to filter)" Style="{StaticResource CaptionText}" FontAttributes="Bold" FontSize="12"/>
                                <FlexLayout Direction="Row" Wrap="Wrap" JustifyContent="Start" BindableLayout.ItemsSource="{Binding Statistics.CommonFlags}">
                                    <BindableLayout.ItemTemplate>
                                        <DataTemplate x:DataType="models:FlagCount">
                                            <Border StrokeShape="RoundRectangle 6" 
                                                    BackgroundColor="#7C2D12" 
                                                    Padding="8,4" 
                                                    Margin="0,0,6,6" 
                                                    StrokeThickness="0">
                                                <Border.GestureRecognizers>
                                                    <TapGestureRecognizer 
                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ExaminerViewQuizVM}}, Path=FilterByFlagCommand}" 
                                                        CommandParameter="{Binding Flag}"/>
                                                </Border.GestureRecognizers>
                                                <HorizontalStackLayout Spacing="4">
                                                    <Image Source="flag.png" WidthRequest="10" HeightRequest="10" VerticalOptions="Center">
                                                        <Image.Behaviors>
                                                            <toolkit:IconTintColorBehavior TintColor="#FBBF24"/>
                                                        </Image.Behaviors>
                                                    </Image>
                                                    <Label Text="{Binding Flag}" FontSize="11" TextColor="#FBBF24"/>
                                                    <Label Text="{Binding Count, StringFormat='({0})'}" FontSize="10" TextColor="#D97706"/>
                                                </HorizontalStackLayout>
                                            </Border>
                                        </DataTemplate>
                                    </BindableLayout.ItemTemplate>
                                </FlexLayout>
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </ScrollView>
            </Border>

            <!-- Submissions Table -->
            <Border Grid.Column="1" Style="{StaticResource TableContainer}">
                <Border.Shadow>
                    <Shadow Brush="#000000" Opacity="0.15" Radius="12" Offset="0,4"/>
                </Border.Shadow>

                <Grid RowDefinitions="Auto,Auto,*">
                    <!-- Active Filter Indicator -->
                    <Border BackgroundColor="{StaticResource Primary}" 
                            Padding="12,8" 
                            IsVisible="{Binding IsFilterActive}">
                        <Grid ColumnDefinitions="*,Auto">
                            <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                                <Image Source="filter.png" WidthRequest="14" HeightRequest="14" VerticalOptions="Center">
                                    <Image.Behaviors>
                                        <toolkit:IconTintColorBehavior TintColor="{StaticResource TextPrimary}"/>
                                    </Image.Behaviors>
                                </Image>
                                <Label Text="Filtered by:" TextColor="{StaticResource TextPrimary}" FontSize="13" VerticalOptions="Center"/>
                                <Label Text="{Binding ActiveFilterDescription}" 
                                       TextColor="{StaticResource TextPrimary}" 
                                       FontAttributes="Bold" 
                                       FontSize="13" 
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                            <Border Grid.Column="1" 
                                    StrokeShape="RoundRectangle 8" 
                                    BackgroundColor="Transparent" 
                                    Stroke="{StaticResource TextPrimary}"
                                    StrokeThickness="1"
                                    Padding="8,4">
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding ClearFilterCommand}"/>
                                </Border.GestureRecognizers>
                                <Label Text="Clear Filter" TextColor="{StaticResource TextPrimary}" FontSize="12"/>
                            </Border>
                        </Grid>
                    </Border>
                    
                    <!-- Table Header -->
                    <Grid Grid.Row="1" ColumnDefinitions="2*,1.5*,*,*,*" ColumnSpacing="12" Style="{StaticResource TableHeaderBackground}">
                        <Label Text="PARTICIPANT" Style="{StaticResource TableHeader}"/>
                        <Label Grid.Column="1" Text="SUBMITTED" Style="{StaticResource TableHeader}"/>
                        <Label Grid.Column="2" Text="STATUS" Style="{StaticResource TableHeader}"/>
                        <Label Grid.Column="3" Text="SCORE" Style="{StaticResource TableHeader}"/>
                        <Label Grid.Column="4" Text="ACTIONS" Style="{StaticResource TableHeader}"/>
                    </Grid>

                    <!-- Table Body -->
                    <CollectionView Grid.Row="2" ItemsSource="{Binding Attempts}">
                        <CollectionView.EmptyView>
                            <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Padding="40">
                                <Label Text="No submissions yet" TextColor="{StaticResource TextMuted}" FontSize="18" HorizontalOptions="Center"/>
                                <Label Text="Participants haven't submitted their attempts" TextColor="{StaticResource TextDisabled}" FontSize="14" HorizontalOptions="Center" Margin="0,10,0,0"/>
                            </VerticalStackLayout>
                        </CollectionView.EmptyView>
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:ExaminerAttempt">
                                <VerticalStackLayout Spacing="8">
                                    <BoxView Style="{StaticResource TableDivider}" Margin="10"/>
                                    <Grid ColumnDefinitions="2*,1.5*,*,*,*" ColumnSpacing="12" Padding="20,16">

                                        <Label Text="{Binding Examinee.FullName}" Style="{StaticResource ItemTitle}" VerticalOptions="Center"/>
                                        <Label Grid.Column="1" Text="{Binding SubmissionTimeString}" Style="{StaticResource BodyText}" VerticalOptions="Center"/>
                                        
                                        <!-- Status Column -->
                                        <HorizontalStackLayout Grid.Column="2" Spacing="6" VerticalOptions="Center">
                                            <!-- Suspicious Badge -->
                                            <Border StrokeShape="RoundRectangle 6" 
                                                    BackgroundColor="#DC2626" 
                                                    Padding="10,5" 
                                                    StrokeThickness="0"
                                                    IsVisible="{Binding HasSuspiciousSolutions}">
                                                <HorizontalStackLayout Spacing="5">
                                                    <Image Source="warning.png" WidthRequest="12" HeightRequest="12" VerticalOptions="Center">
                                                        <Image.Behaviors>
                                                            <toolkit:IconTintColorBehavior TintColor="White"/>
                                                        </Image.Behaviors>
                                                    </Image>
                                                    <Label Text="Suspicious" 
                                                           FontSize="11" 
                                                           FontAttributes="Bold"
                                                           TextColor="White" 
                                                           VerticalOptions="Center"/>
                                                </HorizontalStackLayout>
                                            </Border>
                                            
                                            <!-- Graded Badge -->
                                            <Border StrokeShape="RoundRectangle 6" 
                                                    BackgroundColor="#16A34A" 
                                                    Padding="10,5" 
                                                    StrokeThickness="0"
                                                    IsVisible="{Binding IsFullyGraded}">
                                                <Label Text="Graded" 
                                                       FontSize="11" 
                                                       FontAttributes="Bold"
                                                       TextColor="White" 
                                                       VerticalOptions="Center"/>
                                            </Border>
                                            
                                            <!-- Partial Badge -->
                                            <Border StrokeShape="RoundRectangle 6" 
                                                    BackgroundColor="#CA8A04" 
                                                    Padding="10,5" 
                                                    StrokeThickness="0"
                                                    IsVisible="{Binding IsPartiallyGraded}">
                                                <Label Text="Partial" 
                                                       FontSize="11" 
                                                       FontAttributes="Bold"
                                                       TextColor="White" 
                                                       VerticalOptions="Center"/>
                                            </Border>
                                            
                                            <!-- Pending Badge -->
                                            <Border StrokeShape="RoundRectangle 6" 
                                                    BackgroundColor="{StaticResource SurfaceDark}" 
                                                    Stroke="{StaticResource BorderDefault}"
                                                    StrokeThickness="1"
                                                    Padding="10,5"
                                                    IsVisible="{Binding IsPendingGrading}">
                                                <Label Text="Pending" 
                                                       FontSize="11" 
                                                       TextColor="{StaticResource TextMuted}" 
                                                       VerticalOptions="Center"/>
                                            </Border>
                                        </HorizontalStackLayout>
                                        
                                        <Label Grid.Column="3" Text="{Binding Grade}" Style="{StaticResource ScoreText}" VerticalOptions="Center"/>

                                        <Border Grid.Column="4" Style="{StaticResource ActionBadge}">
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ExaminerViewQuizVM}}, Path=GoToGradeAttemptPageCommand}" CommandParameter="{Binding .}"/>
                                            </Border.GestureRecognizers>
                                            <Label Text="Grade" Style="{StaticResource BadgeText}"/>
                                        </Border>
                                    </Grid>
                                </VerticalStackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Grid>
            </Border>

            <!-- FAB Download Button -->
            <Border Grid.Column="1" Style="{StaticResource FAB}">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding SaveGradesReportCommand}"/>
                </Border.GestureRecognizers>
                <Image Source="download.png" WidthRequest="24" HeightRequest="24" HorizontalOptions="Center" VerticalOptions="Center">
                    <Image.Behaviors>
                        <toolkit:IconTintColorBehavior TintColor="{StaticResource TextPrimary}"/>
                    </Image.Behaviors>
                </Image>
            </Border>
        </Grid>
    </Grid>
</ContentPage>