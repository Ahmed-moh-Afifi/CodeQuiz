<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.Maui;assembly=LiveChartsCore.SkiaSharpView.Maui"
             xmlns:models="clr-namespace:CodeQuizDesktop.Models"
             xmlns:vm="clr-namespace:CodeQuizDesktop.Viewmodels"
             x:Class="CodeQuizDesktop.Views.ExaminerViewQuiz"
             Title="ExaminerViewQuiz"
             x:DataType="vm:ExaminerViewQuizVM">

    <Grid RowDefinitions="Auto,*">
        <!-- Header -->
        <Border StrokeThickness="0" BackgroundColor="{StaticResource BackgroundDark}" Padding="24,16">
            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="16">
                <Border Style="{StaticResource BackButton}">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ReturnCommand}"/>
                    </Border.GestureRecognizers>
                    <Image Source="arrow_back_ios_new_rounded.png" WidthRequest="18" HeightRequest="18" HorizontalOptions="Center" VerticalOptions="Center">
                        <Image.Behaviors>
                            <toolkit:IconTintColorBehavior TintColor="{StaticResource TextPrimary}"/>
                        </Image.Behaviors>
                    </Image>
                </Border>
                <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="4">
                    <Label Text="{Binding Quiz.Title}" Style="{StaticResource PageTitle}" FontSize="24"/>
                    <Label Text="View and grade submissions" Style="{StaticResource CaptionText}"/>
                </VerticalStackLayout>
                
                <!-- Toggle Statistics Panel Button -->
                <Border Grid.Column="2" Style="{StaticResource IconButton}">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding ToggleStatisticsPanelCommand}"/>
                    </Border.GestureRecognizers>
                    <Image Source="sidepane.png" WidthRequest="20" HeightRequest="20" HorizontalOptions="Center" VerticalOptions="Center">
                        <Image.Behaviors>
                            <toolkit:IconTintColorBehavior TintColor="{StaticResource TextPrimary}"/>
                        </Image.Behaviors>
                    </Image>
                </Border>
            </Grid>
        </Border>

        <BoxView HeightRequest="1" Color="{StaticResource BorderDefault}" VerticalOptions="End"/>

        <!-- Content -->
        <Grid Grid.Row="1" ColumnDefinitions="Auto,*" Padding="24" ColumnSpacing="24">

            <!-- Statistics Sidebar -->
            <Border Grid.Column="0" 
                    Style="{StaticResource Card}" 
                    IsVisible="{Binding IsStatisticsPanelVisible}"
                    WidthRequest="320"
                    Padding="0">
                <Border.Shadow>
                    <Shadow Brush="#000000" Opacity="0.15" Radius="12" Offset="0,4"/>
                </Border.Shadow>

                <ScrollView>
                    <VerticalStackLayout Spacing="0">
                        <!-- Statistics Header -->
                        <Grid BackgroundColor="{StaticResource BackgroundDark}" Padding="20,16">
                            <HorizontalStackLayout Spacing="12">
                                <Image Source="stats.png" WidthRequest="20" HeightRequest="20" VerticalOptions="Center">
                                    <Image.Behaviors>
                                        <toolkit:IconTintColorBehavior TintColor="{StaticResource Primary}"/>
                                    </Image.Behaviors>
                                </Image>
                                <Label Text="Statistics" Style="{StaticResource SectionHeader}" FontSize="18" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </Grid>
                        
                        <BoxView HeightRequest="1" Color="{StaticResource BorderDefault}"/>

                        <!-- Quick Stats Grid -->
                        <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" Padding="16" ColumnSpacing="12" RowSpacing="12">
                            <!-- Total Submissions -->
                            <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource InnerCard}" Padding="16">
                                <VerticalStackLayout Spacing="4">
                                    <Label Text="{Binding Statistics.TotalAttempts}" 
                                           FontSize="28" 
                                           FontAttributes="Bold" 
                                           TextColor="{StaticResource TextPrimary}"/>
                                    <Label Text="Total" Style="{StaticResource CaptionText}"/>
                                </VerticalStackLayout>
                            </Border>
                            
                            <!-- Submitted -->
                            <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource InnerCard}" Padding="16">
                                <VerticalStackLayout Spacing="4">
                                    <Label Text="{Binding Statistics.SubmittedAttempts}" 
                                           FontSize="28" 
                                           FontAttributes="Bold" 
                                           TextColor="{StaticResource Success}"/>
                                    <Label Text="Submitted" Style="{StaticResource CaptionText}"/>
                                </VerticalStackLayout>
                            </Border>
                            
                            <!-- Average Grade -->
                            <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource InnerCard}" Padding="16">
                                <VerticalStackLayout Spacing="4">
                                    <Label Text="{Binding Statistics.AverageGrade, StringFormat='{0:F1}'}" 
                                           FontSize="28" 
                                           FontAttributes="Bold" 
                                           TextColor="{StaticResource Warning}"/>
                                    <Label Text="Average" Style="{StaticResource CaptionText}"/>
                                </VerticalStackLayout>
                            </Border>
                            
                            <!-- Pass Rate -->
                            <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource InnerCard}" Padding="16">
                                <VerticalStackLayout Spacing="4">
                                    <Label Text="{Binding Statistics.PassRate, StringFormat='{0:F0}%'}" 
                                           FontSize="28" 
                                           FontAttributes="Bold" 
                                           TextColor="{StaticResource SuccessLight}"/>
                                    <Label Text="Pass Rate" Style="{StaticResource CaptionText}"/>
                                </VerticalStackLayout>
                            </Border>
                        </Grid>

                        <BoxView HeightRequest="1" Color="{StaticResource BorderDefault}" Margin="16,0"/>

                        <!-- Detailed Stats -->
                        <VerticalStackLayout Padding="16" Spacing="12">
                            <Label Text="Grade Details" FontAttributes="Bold" TextColor="{StaticResource TextPrimary}" FontSize="14"/>
                            
                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="10">
                                <Label Grid.Row="0" Text="Highest" Style="{StaticResource BodyText}"/>
                                <Label Grid.Row="0" Grid.Column="1" 
                                       Text="{Binding Statistics.HighestGrade, StringFormat='{0:F1}'}" 
                                       Style="{StaticResource SuccessText}"/>
                                
                                <Label Grid.Row="1" Text="Lowest" Style="{StaticResource BodyText}"/>
                                <Label Grid.Row="1" Grid.Column="1" 
                                       Text="{Binding Statistics.LowestGrade, StringFormat='{0:F1}'}" 
                                       TextColor="{StaticResource ErrorLight}" 
                                       FontAttributes="Bold"/>
                                
                                <Label Grid.Row="2" Text="Median" Style="{StaticResource BodyText}"/>
                                <Label Grid.Row="2" Grid.Column="1" 
                                       Text="{Binding Statistics.MedianGrade, StringFormat='{0:F1}'}" 
                                       TextColor="{StaticResource TextPrimary}" 
                                       FontAttributes="Bold"/>
                                
                                <Label Grid.Row="3" Text="Std. Deviation" Style="{StaticResource BodyText}"/>
                                <Label Grid.Row="3" Grid.Column="1" 
                                       Text="{Binding Statistics.StandardDeviation, StringFormat='{0:F2}'}" 
                                       TextColor="{StaticResource TextSecondary}" 
                                       FontAttributes="Bold"/>
                            </Grid>
                        </VerticalStackLayout>

                        <BoxView HeightRequest="1" Color="{StaticResource BorderDefault}" Margin="16,0"/>

                        <!-- Grade Distribution Chart -->
                        <VerticalStackLayout Padding="16" Spacing="12">
                            <HorizontalStackLayout Spacing="8">
                                <Label Text="Grading Curve" FontAttributes="Bold" TextColor="{StaticResource TextPrimary}" FontSize="14"/>
                                <Label Text="vs Normal Distribution" Style="{StaticResource CaptionText}" VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                            
                            <!-- Chart Container - visibility controlled to avoid disposal issues -->
                            <ContentView x:Name="chartContainer" HeightRequest="200" IsVisible="{Binding IsChartVisible}">
                                <lvc:CartesianChart 
                                    x:Name="gradeChart"
                                    Series="{Binding GradeCurveSeries}"
                                    XAxes="{Binding XAxes}"
                                    YAxes="{Binding YAxes}"
                                    HeightRequest="200"
                                    BackgroundColor="Transparent">
                                </lvc:CartesianChart>
                            </ContentView>
                            
                            <!-- Empty state when no chart data -->
                            <Border HeightRequest="200" 
                                    BackgroundColor="{StaticResource BackgroundDark}" 
                                    StrokeShape="RoundRectangle 8"
                                    StrokeThickness="0"
                                    IsVisible="{Binding IsChartVisible, Converter={StaticResource InverseBoolConverter}}">
                                <Label Text="No grade data available yet" 
                                       TextColor="{StaticResource TextMuted}" 
                                       HorizontalOptions="Center" 
                                       VerticalOptions="Center"/>
                            </Border>
                            
                            <!-- Legend -->
                            <HorizontalStackLayout Spacing="16" HorizontalOptions="Center" IsVisible="{Binding IsChartVisible}">
                                <HorizontalStackLayout Spacing="6">
                                    <BoxView WidthRequest="12" HeightRequest="12" Color="{StaticResource Primary}" CornerRadius="2"/>
                                    <Label Text="Actual" Style="{StaticResource CaptionText}"/>
                                </HorizontalStackLayout>
                                <HorizontalStackLayout Spacing="6">
                                    <BoxView WidthRequest="12" HeightRequest="3" Color="{StaticResource Success}" VerticalOptions="Center"/>
                                    <Label Text="Normal Curve" Style="{StaticResource CaptionText}"/>
                                </HorizontalStackLayout>
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </ScrollView>
            </Border>

            <!-- Submissions Table -->
            <Border Grid.Column="1" Style="{StaticResource TableContainer}">
                <Border.Shadow>
                    <Shadow Brush="#000000" Opacity="0.15" Radius="12" Offset="0,4"/>
                </Border.Shadow>

                <Grid RowDefinitions="Auto,*">
                    <!-- Table Header -->
                    <Grid ColumnDefinitions="*,*,*,*" Style="{StaticResource TableHeaderBackground}">
                        <Label Text="PARTICIPANT" Style="{StaticResource TableHeader}"/>
                        <Label Grid.Column="1" Text="SUBMITTED" Style="{StaticResource TableHeader}"/>
                        <Label Grid.Column="2" Text="SCORE" Style="{StaticResource TableHeader}"/>
                        <Label Grid.Column="3" Text="ACTIONS" Style="{StaticResource TableHeader}"/>
                    </Grid>

                    <!-- Table Body -->
                    <CollectionView Grid.Row="1" ItemsSource="{Binding Attempts}">
                        <CollectionView.EmptyView>
                            <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Padding="40">
                                <Label Text="No submissions yet" TextColor="{StaticResource TextMuted}" FontSize="18" HorizontalOptions="Center"/>
                                <Label Text="Participants haven't submitted their attempts" TextColor="{StaticResource TextDisabled}" FontSize="14" HorizontalOptions="Center" Margin="0,10,0,0"/>
                            </VerticalStackLayout>
                        </CollectionView.EmptyView>
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:ExaminerAttempt">
                                <VerticalStackLayout Spacing="8">
                                    <BoxView Style="{StaticResource TableDivider}" Margin="10"/>
                                    <Grid ColumnDefinitions="*,*,*,*" Padding="20,16">

                                        <Label Text="{Binding Examinee.FullName}" Style="{StaticResource ItemTitle}" VerticalOptions="Center"/>
                                        <Label Grid.Column="1" Text="{Binding SubmissionTimeString}" Style="{StaticResource BodyText}" VerticalOptions="Center"/>
                                        <Label Grid.Column="2" Text="{Binding Grade}" Style="{StaticResource ScoreText}" VerticalOptions="Center"/>

                                        <Border Grid.Column="3" Style="{StaticResource ActionBadge}">
                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ExaminerViewQuizVM}}, Path=GoToGradeAttemptPageCommand}" CommandParameter="{Binding .}"/>
                                            </Border.GestureRecognizers>
                                            <Label Text="Grade" Style="{StaticResource BadgeText}"/>
                                        </Border>
                                    </Grid>
                                </VerticalStackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </Grid>
            </Border>

            <!-- FAB Download Button -->
            <Border Grid.Column="1" Style="{StaticResource FAB}">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding SaveGradesReportCommand}"/>
                </Border.GestureRecognizers>
                <Image Source="download.png" WidthRequest="24" HeightRequest="24" HorizontalOptions="Center" VerticalOptions="Center">
                    <Image.Behaviors>
                        <toolkit:IconTintColorBehavior TintColor="{StaticResource TextPrimary}"/>
                    </Image.Behaviors>
                </Image>
            </Border>
        </Grid>
    </Grid>
</ContentPage>